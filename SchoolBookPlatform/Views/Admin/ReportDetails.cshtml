@model SchoolBookPlatform.ViewModels.Admin.ReportDetailsViewModel

@{
    ViewData["Title"] = "Chi tiết báo cáo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="row">
        <!-- Main Content -->
        <div class="col-md-8">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="mb-0"><i class="bi bi-info-circle-fill text-primary"></i> Chi tiết báo cáo</h2>
                    <small class="text-muted">Thông tin chi tiết về báo cáo</small>
                </div>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
                    <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
                    <i class="bi bi-exclamation-circle-fill"></i> @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Report Information -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-flag-fill"></i> Thông tin báo cáo</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-4"><strong>ID báo cáo:</strong></div>
                        <div class="col-md-8"><code>@Model.Id</code></div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4"><strong>Người báo cáo:</strong></div>
                        <div class="col-md-8">@Model.ReporterUsername</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4"><strong>Lý do báo cáo:</strong></div>
                        <div class="col-md-8">
                            <input type="text" class="form-control bg-warning bg-opacity-25" value="@Model.Reason" readonly>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4"><strong>Trạng thái:</strong></div>
                        <div class="col-md-8">
                            @if (Model.Status == "Pending")
                            {
                                <span class="badge bg-warning fs-6">Đang chờ</span>
                            }
                            else if (Model.Status == "Approved")
                            {
                                <span class="badge bg-success fs-6">Đã duyệt</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary fs-6">Đã từ chối</span>
                            }
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4"><strong>Ngày tạo:</strong></div>
                        <div class="col-md-8">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm:ss")</div>
                    </div>
                    @if (Model.ReviewedBy.HasValue)
                    {
                        <div class="row mb-3">
                            <div class="col-md-4"><strong>Người xử lý:</strong></div>
                            <div class="col-md-8">@Model.ReviewerUsername (@Model.ReviewedAt?.ToString("dd/MM/yyyy HH:mm:ss"))</div>
                        </div>
                    }
                </div>
            </div>

            <!-- Post Information -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-file-text-fill"></i> Thông tin bài đăng bị báo cáo</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-4"><strong>ID bài đăng:</strong></div>
                        <div class="col-md-8"><code>@Model.PostId</code></div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4"><strong>Tiêu đề:</strong></div>
                        <div class="col-md-8">@Model.PostTitle</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4"><strong>Nội dung:</strong></div>
                        <div class="col-md-8">
                            <textarea class="form-control bg-light" rows="5" readonly>@Model.PostContent</textarea>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4"><strong>Tác giả:</strong></div>
                        <div class="col-md-8">@Model.PostAuthorUsername</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4"><strong>Ngày đăng:</strong></div>
                        <div class="col-md-8">@Model.PostCreatedAt.ToString("dd/MM/yyyy HH:mm:ss")</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4"><strong>Trạng thái:</strong></div>
                        <div class="col-md-8">
                            @if (Model.PostIsDeleted)
                            {
                                <span class="badge bg-danger fs-6">Đã xóa</span>
                            }
                            else if (Model.PostIsVisible)
                            {
                                <span class="badge bg-success fs-6">Hoạt động</span>
                            }
                            else
                            {
                                <span class="badge bg-warning fs-6">Chờ duyệt</span>
                            }
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <a asp-controller="Post" asp-action="Details" asp-route-id="@Model.PostId" class="btn btn-warning" target="_blank">
                                <i class="bi bi-eye"></i> Xem bài đăng
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-md-4">
            <div class="mb-3">
                <a asp-action="Reports" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
            </div>

            <!-- Statistics -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-secondary text-white">
                    <h6 class="mb-0"><i class="bi bi-bar-chart-fill"></i> Thống kê báo cáo</h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span>Đang chờ:</span>
                            <span class="badge bg-warning">@Model.PendingReportsCount</span>
                        </div>
                        <div class="progress" style="height: 5px;">
                            <div class="progress-bar bg-warning" style="width: @(Model.TotalReportsCount > 0 ? (Model.PendingReportsCount * 100.0 / Model.TotalReportsCount) : 0)%"></div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span>Đã duyệt:</span>
                            <span class="badge bg-success">@Model.ApprovedReportsCount</span>
                        </div>
                        <div class="progress" style="height: 5px;">
                            <div class="progress-bar bg-success" style="width: @(Model.TotalReportsCount > 0 ? (Model.ApprovedReportsCount * 100.0 / Model.TotalReportsCount) : 0)%"></div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span>Đã từ chối:</span>
                            <span class="badge bg-secondary">@Model.RejectedReportsCount</span>
                        </div>
                        <div class="progress" style="height: 5px;">
                            <div class="progress-bar bg-secondary" style="width: @(Model.TotalReportsCount > 0 ? (Model.RejectedReportsCount * 100.0 / Model.TotalReportsCount) : 0)%"></div>
                        </div>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <span>Tổng số:</span>
                        <span class="badge bg-primary">@Model.TotalReportsCount</span>
                    </div>
                </div>
            </div>

            <!-- Actions -->
            @if (Model.Status == "Pending")
            {
                <div class="card shadow-sm">
                    <div class="card-header bg-warning text-dark">
                        <h6 class="mb-0"><i class="bi bi-gear-fill"></i> Thao tác</h6>
                    </div>
                    <div class="card-body">
                        <form asp-action="ApproveReport" asp-route-id="@Model.Id" method="post" class="mb-3">
                            @Html.AntiForgeryToken()
                            <div class="mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="deletePost" value="true" id="deletePostCheck">
                                    <label class="form-check-label" for="deletePostCheck">
                                        Xóa bài đăng khi duyệt
                                    </label>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-success w-100" onclick="return confirm('Bạn có chắc chắn muốn duyệt báo cáo này?');">
                                <i class="bi bi-check-circle"></i> Duyệt báo cáo
                            </button>
                        </form>

                        <form asp-action="RejectReport" asp-route-id="@Model.Id" method="post" class="mb-3">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger w-100" onclick="return confirm('Bạn có chắc chắn muốn từ chối báo cáo này?');">
                                <i class="bi bi-x-circle"></i> Từ chối báo cáo
                            </button>
                        </form>

                        <form asp-action="DeleteReport" asp-route-id="@Model.Id" method="post">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-outline-danger w-100" onclick="return confirm('Bạn có chắc chắn muốn xóa báo cáo này?');">
                                <i class="bi bi-trash"></i> Xóa báo cáo
                            </button>
                        </form>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    Báo cáo này đã được xử lý bởi <strong>@Model.ReviewerUsername</strong> vào <strong>@Model.ReviewedAt?.ToString("dd/MM/yyyy HH:mm:ss")</strong>.
                </div>
            }
        </div>
    </div>
</div>

