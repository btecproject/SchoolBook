@{
    ViewData["Title"] = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (TempData["error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<div class="text-center py-5">
    <h1 class="display-4 text-primary"></h1>
    <p class="lead">Chào mừng bạn đến với <strong>SchoolBook</strong> - Mạng xã hội thu nhỏ cho trường học.</p>
    <hr>
    <div class="mt-4">
        <a href="#" class="btn btn-outline-primary me-2">Xem bài viết</a>
        <a href="#" class="btn btn-outline-success">Tạo bài viết mới</a>
        <a href="/Chat" class="btn btn-primary">Go to Chat</a>
    </div>

    @section Scripts {
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    }
</div>