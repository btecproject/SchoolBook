@model SchoolBookPlatform.Models.ChatThread

@{
    ViewData["Title"] = Model?.ThreadName ?? "Chat";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
    var currentUser = User.Identity?.Name ?? "Unknown";
    
    // Lấy segment hiện tại
    var currentSegment = Model.Segments?.OrderByDescending(s => s.StartTime).FirstOrDefault();
    var hasSegment = currentSegment != null;
}

<style>
    body {
        overflow: hidden;
    }
    
    .chat-container {
        display: flex;
        height: calc(100vh - 100px);
        background: #fff;
    }
    
    /* Left Sidebar - Thread List */
    .thread-list {
        width: 380px;
        border-right: 1px solid #ddd;
        background: #fff;
        display: flex;
        flex-direction: column;
        height: 100%;
    }
    
    .thread-list-header {
        padding: 15px 20px;
        border-bottom: 1px solid #e8e8e8;
        background: #f5f5f5;
    }
    
    .thread-list-header h5 {
        margin: 0;
        font-weight: 600;
        color: #2c3e50;
    }
    
    .search-box {
        padding: 10px 15px;
        border-bottom: 1px solid #e8e8e8;
    }
    
    .search-box input {
        width: 100%;
        padding: 8px 12px;
        border: 1px solid #ddd;
        border-radius: 20px;
        outline: none;
        font-size: 14px;
    }
    
    .threads-scroll {
        flex: 1;
        overflow-y: auto;
    }
    
    .thread-item {
        padding: 12px 20px;
        border-bottom: 1px solid #f0f0f0;
        cursor: pointer;
        transition: background 0.2s;
        display: flex;
        align-items: center;
        text-decoration: none;
        color: inherit;
    }
    
    .thread-item:hover {
        background: #f8f9fa;
    }
    
    .thread-item.active {
        background: #e8f4fd;
        border-left: 3px solid #0088cc;
    }
    
    .thread-avatar {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: bold;
        font-size: 20px;
        margin-right: 15px;
        flex-shrink: 0;
    }
    
    .thread-content {
        flex: 1;
        min-width: 0;
    }
    
    .thread-name {
        font-weight: 600;
        font-size: 15px;
        color: #2c3e50;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
    
    .thread-preview {
        font-size: 14px;
        color: #8e8e93;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
    
    /* Right Panel - Chat */
    .chat-panel {
        flex: 1;
        display: flex;
        flex-direction: column;
        background: #f5f5f5;
    }
    
    .chat-header {
        padding: 15px 20px;
        background: #fff;
        border-bottom: 1px solid #e8e8e8;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }
    
    .chat-header-info {
        display: flex;
        align-items: center;
    }
    
    .chat-header-avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: bold;
        margin-right: 12px;
    }
    
    .chat-header-title {
        font-weight: 600;
        font-size: 16px;
        color: #2c3e50;
    }
    
    .chat-header-status {
        font-size: 13px;
        color: #8e8e93;
    }
    
    .chat-messages {
        flex: 1;
        overflow-y: auto;
        padding: 20px;
        background: #e5ddd5;
    }
    
    .message {
        margin-bottom: 10px;
        display: flex;
        align-items: flex-end;
    }
    
    .message.sent {
        justify-content: flex-end;
    }
    
    .message.received {
        justify-content: flex-start;
    }
    
    .message-bubble {
        max-width: 60%;
        padding: 8px 12px;
        border-radius: 10px;
        position: relative;
    }
    
    .message.sent .message-bubble {
        background: #dcf8c6;
        border-bottom-right-radius: 2px;
    }
    
    .message.received .message-bubble {
        background: #fff;
        border-bottom-left-radius: 2px;
    }
    
    .message-sender {
        font-weight: 600;
        font-size: 13px;
        color: #0088cc;
        margin-bottom: 2px;
    }
    
    .message-content {
        font-size: 14px;
        color: #2c3e50;
        word-wrap: break-word;
    }
    
    .message-time {
        font-size: 11px;
        color: #8e8e93;
        margin-top: 4px;
        text-align: right;
    }
    
    .chat-input {
        padding: 15px 20px;
        background: #fff;
        border-top: 1px solid #e8e8e8;
        display: flex;
        align-items: center;
        gap: 10px;
    }
    
    .chat-input input {
        flex: 1;
        padding: 10px 15px;
        border: 1px solid #ddd;
        border-radius: 20px;
        outline: none;
        font-size: 14px;
    }
    
    .chat-input button {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        border: none;
        background: #0088cc;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: background 0.2s;
    }
    
    .chat-input button:hover {
        background: #0077b3;
    }
    
    .chat-input button:disabled {
        background: #ccc;
        cursor: not-allowed;
    }
    
    /* Segments dropdown */
    .segments-dropdown {
        position: relative;
    }
    
    .segments-btn {
        background: #f0f0f0;
        border: none;
        padding: 8px 15px;
        border-radius: 20px;
        cursor: pointer;
        font-size: 14px;
        color: #2c3e50;
        transition: background 0.2s;
    }
    
    .segments-btn:hover {
        background: #e0e0e0;
    }
    
    /* Scrollbar */
    .chat-messages::-webkit-scrollbar,
    .threads-scroll::-webkit-scrollbar {
        width: 6px;
    }
    
    .chat-messages::-webkit-scrollbar-track,
    .threads-scroll::-webkit-scrollbar-track {
        background: #f1f1f1;
    }
    
    .chat-messages::-webkit-scrollbar-thumb,
    .threads-scroll::-webkit-scrollbar-thumb {
        background: #888;
        border-radius: 3px;
    }
    
    /* Date separator */
    .date-separator {
        text-align: center;
        margin: 20px 0;
    }
    
    .date-separator span {
        background: rgba(0, 0, 0, 0.2);
        color: white;
        padding: 4px 12px;
        border-radius: 12px;
        font-size: 12px;
    }
</style>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

<div class="chat-container">
    <!-- Left Sidebar - Thread List (same as Index) -->
    <div class="thread-list">
        <div class="thread-list-header">
            <div style="display: flex; justify-content: space-between; align-items: center;">
                <h5 style="margin: 0;"><i class="bi bi-chat-dots me-2"></i>Messages</h5>
                <a href="/Chat" class="btn btn-primary btn-sm" style="border-radius: 20px;">
                    <i class="bi bi-plus-circle"></i> New
                </a>
            </div>
        </div>
        
        <div class="search-box">
            <input type="text" placeholder="Search conversations..." />
        </div>
        
        <div class="threads-scroll">
            <a href="@Url.Action("Thread", "Chat", new { threadId = Model.Id })" 
               class="thread-item active">
                <div class="thread-avatar">
                    @Model.ThreadName.Substring(0, 1).ToUpper()
                </div>
                <div class="thread-content">
                    <div class="thread-name">@Model.ThreadName</div>
                    <div class="thread-preview">@Model.LastMessageContent</div>
                </div>
            </a>
        </div>
    </div>
    
    <!-- Right Panel - Chat -->
    <div class="chat-panel">
        <!-- Chat Header -->
        <div class="chat-header">
            <div class="chat-header-info">
                <div class="chat-header-avatar">
                    @Model.ThreadName.Substring(0, 1).ToUpper()
                </div>
                <div>
                    <div class="chat-header-title">@Model.ThreadName</div>
                    <div class="chat-header-status">@Model.UserIds.Count members</div>
                </div>
            </div>
            <div class="segments-dropdown">
                <button class="segments-btn" onclick="toggleSegments()">
                    <i class="bi bi-three-dots-vertical"></i>
                </button>
            </div>
        </div>
        
        <!-- Chat Messages -->
        <div class="chat-messages" id="messages">
            <div class="date-separator">
                <span>November 4</span>
            </div>
            <!-- Messages will be loaded here -->
        </div>
        
        <!-- Chat Input -->
        <div class="chat-input">
            <input type="file" 
                   id="fileInput" 
                   style="display: none;" 
                   accept="image/*,video/*,.pdf,.doc,.docx,.txt,.xlsx,.xls,.zip,.rar"
                   onchange="handleFileSelect(event)" />
            <button type="button" onclick="document.getElementById('fileInput').click()">
                <i class="bi bi-paperclip"></i>
            </button>
            <input type="text" 
                   id="messageInput" 
                   placeholder="Type a message..."
                   onkeypress="if(event.key === 'Enter') sendMessage()"
                   @(!hasSegment ? "disabled" : "") />
            <button type="button" id="sendBtn" onclick="selectedFile ? uploadAndSend() : sendMessage()" @(!hasSegment ? "disabled" : "")>
                <i class="bi bi-send-fill"></i>
            </button>
        </div>
        
        <!-- File Preview -->
        <div id="filePreview" style="display: none; padding: 10px 20px; background: #f0f0f0; border-top: 1px solid #ddd;">
            <div style="display: flex; align-items: center; justify-content: space-between;">
                <div style="display: flex; align-items: center; gap: 10px;">
                    <i class="bi bi-file-earmark" id="fileIcon" style="font-size: 24px;"></i>
                    <div>
                        <div id="fileName" style="font-weight: 600;"></div>
                        <div id="fileSize" style="font-size: 12px; color: #666;"></div>
                    </div>
                </div>
                <button onclick="cancelFile()" class="btn btn-sm btn-danger">
                    <i class="bi bi-x"></i>
                </button>
            </div>
            <div id="uploadProgress" style="display: none; margin-top: 10px;">
                <div class="progress">
                    <div id="progressBar" class="progress-bar" role="progressbar" style="width: 0%"></div>
                </div>
            </div>
        </div>
        
        @if (!hasSegment)
        {
            <div style="padding: 10px 20px; background: #fff3cd; border-top: 1px solid #ffc107; text-align: center;">
                <small class="text-dark">
                    <i class="bi bi-exclamation-triangle"></i> 
                    No active segment. 
                    <button class="btn btn-sm btn-primary ms-2" onclick="createFirstSegment()">
                        <i class="bi bi-plus-circle"></i> Create Segment
                    </button>
                </small>
            </div>
        }
    </div>
</div>

<!-- Segments Modal -->
<div class="modal fade" id="segmentsModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Chat Segments</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                @if (Model.Segments != null && Model.Segments.Any())
                {
                    <div class="list-group">
                        @foreach (var segment in Model.Segments.OrderByDescending(s => s.StartTime))
                        {
                            <button class="list-group-item list-group-item-action" 
                                    onclick="selectSegment(@segment.Id, @segment.IsProtected.ToString().ToLower())">
                                <div class="d-flex justify-content-between">
                                    <span>@segment.StartTime.ToString("MMM dd, yyyy HH:mm")</span>
                                    @if (segment.IsProtected)
                                    {
                                        <span class="badge bg-warning"><i class="bi bi-lock"></i> Protected</span>
                                    }
                                </div>
                            </button>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted text-center">No segments yet</p>
                }
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" onclick="startNewSegment()">
                    <i class="bi bi-plus"></i> New Segment
                </button>
                <button class="btn btn-warning" onclick="startProtectedSegment()">
                    <i class="bi bi-shield-lock"></i> New Protected
                </button>
            </div>
        </div>
    </div>
</div>

<!-- PIN Modal -->
<div class="modal fade" id="pinModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="bi bi-shield-lock"></i> Enter PIN</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="password" 
                       id="pinInput" 
                       class="form-control" 
                       placeholder="Enter 4-6 digit PIN"
                       onkeypress="if(event.key === 'Enter') submitPin()" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="submitPin()">Submit</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        const threadId = parseInt('@Model.Id') || 0;
        const currentUser = '@currentUser' || 'Unknown';
        let currentSegmentId = parseInt('@(currentSegment?.Id ?? 0)') || 0;
        let connection = null;
        let selectedFile = null;
        let messageIndex = 0; // Track message index

        // Initialize SignalR
        function initializeSignalR() {
            connection = new signalR.HubConnectionBuilder()
                .withUrl("/chatHub")
                .withAutomaticReconnect()
                .build();

            // Nhận tin nhắn - CẬP NHẬT: Nhận attachmentId thay vì data
            connection.on("ReceiveMessage", (userId, content, timestamp, attachmentId, attachmentType, attachmentName, attachmentSize) => {
                console.log("✅ Received message:", userId, attachmentId);
                appendMessage(userId, content, new Date(timestamp), attachmentId, attachmentType, attachmentName, attachmentSize);
            });

            connection.on("SegmentStarted", (segmentId, message) => {
                currentSegmentId = segmentId;
                messageIndex = 0;
                alert(message);
                setTimeout(() => location.reload(), 1000);
            });

            connection.start()
                .then(() => {
                    console.log("✅ SignalR connected");
                    return connection.invoke("JoinThread", threadId);
                })
                .catch(err => console.error("❌ Error:", err));
        }

        // Append message - CẬP NHẬT: Load file từ API
        function appendMessage(userId, content, timestamp, attachmentId, attachmentType, attachmentName, attachmentSize) {
            const messagesDiv = document.getElementById("messages");
            const isSent = userId === currentUser;
            
            let attachmentHtml = '';
            if (attachmentId) {
                const fileUrl = `/api/files/${attachmentId}`;
                
                if (attachmentType === 'image') {
                    attachmentHtml = `
                        <div class="attachment-preview">
                            <img src="${fileUrl}" 
                                 alt="${attachmentName}" 
                                 style="max-width: 300px; max-height: 300px; border-radius: 8px; cursor: pointer; display: block; margin-top: 5px;"
                                 onclick="window.open('${fileUrl}', '_blank')">
                        </div>`;
                } else if (attachmentType === 'video') {
                    attachmentHtml = `
                        <div class="attachment-preview">
                            <video controls style="max-width: 400px; border-radius: 8px; margin-top: 5px;">
                                <source src="${fileUrl}">
                            </video>
                        </div>`;
                } else {
                    attachmentHtml = `
                        <div class="attachment-file" style="margin-top: 5px;">
                            <a href="${fileUrl}" download="${attachmentName}" 
                               style="text-decoration: none; color: inherit; display: flex; align-items: center; gap: 8px;">
                                <i class="bi bi-file-earmark" style="font-size: 24px;"></i>
                                <div>
                                    <div style="font-weight: 600;">${escapeHtml(attachmentName)}</div>
                                    <small style="color: #666;">${formatFileSize(attachmentSize)}</small>
                                </div>
                            </a>
                        </div>`;
                }
            }
            
            const messageHtml = `
                <div class="message ${isSent ? 'sent' : 'received'}">
                    <div class="message-bubble">
                        ${!isSent ? `<div class="message-sender">${escapeHtml(userId)}</div>` : ''}
                        ${content ? `<div class="message-content">${escapeHtml(content)}</div>` : ''}
                        ${attachmentHtml}
                        <div class="message-time">${formatTime(timestamp)}</div>
                    </div>
                </div>
            `;
            
            messagesDiv.insertAdjacentHTML('beforeend', messageHtml);
            messagesDiv.scrollTop = messagesDiv.scrollHeight;
        }

        // Load messages
        function loadMessages(segmentId, pin = null) {
            let url = `/api/chat/messages?segmentId=${segmentId}`;
            if (pin) url += `&pin=${encodeURIComponent(pin)}`;
            
            fetch(url)
                .then(response => response.json())
                .then(messages => {
                    const messagesDiv = document.getElementById("messages");
                    messagesDiv.innerHTML = '<div class="date-separator"><span>Today</span></div>';
                    
                    if (Array.isArray(messages) && messages.length > 0) {
                        messages.forEach((m, index) => {
                            appendMessage(
                                m.userId, 
                                m.content, 
                                new Date(m.timestamp),
                                m.attachmentId,
                                m.attachmentType,
                                m.attachmentName,
                                m.attachmentSize
                            );
                        });
                        messageIndex = messages.length;
                    }
                })
                .catch(err => console.error("Error:", err));
        }

        // File handling
        function handleFileSelect(event) {
            const file = event.target.files[0];
            if (!file) return;

            selectedFile = file;

            document.getElementById('filePreview').style.display = 'block';
            document.getElementById('fileName').textContent = file.name;
            document.getElementById('fileSize').textContent = formatFileSize(file.size);

            const fileIcon = document.getElementById('fileIcon');
            if (file.type.startsWith('image/')) {
                fileIcon.className = 'bi bi-image';
            } else if (file.type.startsWith('video/')) {
                fileIcon.className = 'bi bi-camera-video';
            } else {
                fileIcon.className = 'bi bi-file-earmark';
            }
        }

        function cancelFile() {
            selectedFile = null;
            document.getElementById('fileInput').value = '';
            document.getElementById('filePreview').style.display = 'none';
        }

        async function uploadFile() {
            if (!selectedFile) return null;

            const formData = new FormData();
            formData.append('file', selectedFile);
            formData.append('segmentId', currentSegmentId);
            formData.append('messageIndex', messageIndex);

            const progressDiv = document.getElementById('uploadProgress');
            const progressBar = document.getElementById('progressBar');
            if (progressDiv) progressDiv.style.display = 'block';

            try {
                const response = await fetch('/api/files/upload', {
                    method: 'POST',
                    body: formData
                });

                if (!response.ok) throw new Error('Upload failed');

                const result = await response.json();
                console.log('✅ File uploaded to DB:', result);

                if (progressDiv) progressDiv.style.display = 'none';
                cancelFile();

                return result;
            } catch (error) {
                console.error('❌ Upload error:', error);
                alert('Failed to upload: ' + error.message);
                if (progressDiv) progressDiv.style.display = 'none';
                return null;
            }
        }

        // Send message
        async function sendMessage() {
            const input = document.getElementById("messageInput");
            const content = input.value.trim();
            
            if (!content && !selectedFile) return;
            if (!currentSegmentId) {
                alert("No active segment");
                return;
            }
            if (!connection || connection.state !== signalR.HubConnectionState.Connected) {
                alert("Not connected");
                return;
            }

            try {
                if (selectedFile) {
                    const uploadResult = await uploadFile();
                    if (!uploadResult) return;

                    await connection.invoke("SendMessageWithAttachment", 
                        threadId, 
                        currentSegmentId, 
                        content,
                        uploadResult.attachmentId,
                        uploadResult.type,
                        uploadResult.name,
                        uploadResult.size
                    );
                    
                    messageIndex++;
                } else {
                    await connection.invoke("SendMessage", threadId, currentSegmentId, content);
                }

                console.log("✅ Message sent");
                input.value = "";
            } catch (err) {
                console.error("❌ Error:", err);
                alert("Failed: " + err.message);
            }
        }

        // Helper functions
        function formatFileSize(bytes) {
            if (!bytes) return '0 B';
            const k = 1024;
            const sizes = ['B', 'KB', 'MB', 'GB'];
            const i = Math.floor(Math.log(bytes) / Math.log(k));
            return Math.round(bytes / Math.pow(k, i) * 100) / 100 + ' ' + sizes[i];
        }

        function formatTime(date) {
            return date.toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit' });
        }

        function escapeHtml(text) {
            if (!text) return '';
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            initializeSignalR();
            if (currentSegmentId > 0) {
                loadMessages(currentSegmentId);
            }
        });

        // Other functions (selectSegment, submitPin, etc.)
        function selectSegment(segmentId, isProtected) {
            currentSegmentId = segmentId;
            messageIndex = 0;
            if (isProtected) {
                new bootstrap.Modal(document.getElementById('pinModal')).show();
            } else {
                loadMessages(segmentId);
            }
        }

        function submitPin() {
            const pin = document.getElementById("pinInput").value;
            if (pin) {
                loadMessages(currentSegmentId, pin);
                bootstrap.Modal.getInstance(document.getElementById('pinModal')).hide();
                document.getElementById("pinInput").value = "";
            }
        }

        function toggleSegments() {
            new bootstrap.Modal(document.getElementById('segmentsModal')).show();
        }

        function startNewSegment() {
            connection.invoke("StartNewSegment", threadId).catch(err => console.error(err));
        }

        function startProtectedSegment() {
            const pin = prompt("Enter PIN (4-6 digits):");
            if (pin && /^\d{4,6}$/.test(pin)) {
                connection.invoke("StartProtectedSegment", threadId, pin).catch(err => console.error(err));
            }
        }

        function createFirstSegment() {
            const btn = event.target;
            btn.disabled = true;
            btn.innerHTML = '<span class="spinner-border spinner-border-sm"></span> Creating...';
            
            connection.invoke("StartNewSegment", threadId)
                .then(() => {
                    alert("Created!");
                    setTimeout(() => location.reload(), 1000);
                })
                .catch(err => {
                    alert("Failed: " + err.message);
                    btn.disabled = false;
                    btn.innerHTML = '<i class="bi bi-plus-circle"></i> Create Segment';
                });
        }
    </script>
}