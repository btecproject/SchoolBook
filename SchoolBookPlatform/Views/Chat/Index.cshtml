@model List<SchoolBookPlatform.Models.ChatThread>

@{
ViewData["Title"] = "Chat";
Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        overflow: hidden;
    }

    .chat-container {
        display: flex;
        height: calc(100vh - 100px);
        background: #fff;
        margin: 0;
        padding: 0;
    }

    /* Left Sidebar - Thread List */
    .thread-list {
        width: 380px;
        border-right: 1px solid #ddd;
        background: #fff;
        display: flex;
        flex-direction: column;
        height: 100%;
    }

    .thread-list-header {
        padding: 15px 20px;
        border-bottom: 1px solid #e8e8e8;
        background: #f5f5f5;
    }

    .thread-list-header h5 {
        margin: 0;
        font-weight: 600;
        color: #2c3e50;
    }

    .search-box {
        padding: 10px 15px;
        border-bottom: 1px solid #e8e8e8;
    }

    .search-box input {
        width: 100%;
        padding: 8px 12px;
        border: 1px solid #ddd;
        border-radius: 20px;
        outline: none;
        font-size: 14px;
    }

    .threads-scroll {
        flex: 1;
        overflow-y: auto;
        overflow-x: hidden;
    }

    .thread-item {
        padding: 12px 20px;
        border-bottom: 1px solid #f0f0f0;
        cursor: pointer;
        transition: background 0.2s;
        display: flex;
        align-items: center;
        text-decoration: none;
        color: inherit;
    }

    .thread-item:hover {
        background: #f8f9fa;
    }

    .thread-item.active {
        background: #e8f4fd;
        border-left: 3px solid #0088cc;
    }

    .thread-avatar {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: bold;
        font-size: 20px;
        margin-right: 15px;
        flex-shrink: 0;
    }

    .thread-content {
        flex: 1;
        min-width: 0;
    }

    .thread-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 5px;
    }

    .thread-name {
        font-weight: 600;
        font-size: 15px;
        color: #2c3e50;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .thread-time {
        font-size: 12px;
        color: #8e8e93;
    }

    .thread-preview {
        font-size: 14px;
        color: #8e8e93;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    /* Right Panel - Empty State */
    .chat-panel {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #f5f5f5;
    }

    .empty-state {
        text-align: center;
        color: #8e8e93;
    }

    .empty-state i {
        font-size: 80px;
        margin-bottom: 20px;
        opacity: 0.3;
    }

    .empty-state h4 {
        margin-bottom: 10px;
        color: #2c3e50;
    }

    /* Scrollbar */
    .threads-scroll::-webkit-scrollbar {
        width: 6px;
    }

    .threads-scroll::-webkit-scrollbar-track {
        background: #f1f1f1;
    }

    .threads-scroll::-webkit-scrollbar-thumb {
        background: #888;
        border-radius: 3px;
    }

    .threads-scroll::-webkit-scrollbar-thumb:hover {
        background: #555;
    }

    /* Badge */
    .unread-badge {
        background: #0088cc;
        color: white;
        padding: 2px 8px;
        border-radius: 10px;
        font-size: 12px;
        font-weight: 600;
    }

    /* Modal styles */
    #searchResults .list-group-item {
        cursor: pointer;
        transition: background 0.2s;
    }

    #searchResults .list-group-item:hover {
        background: #f8f9fa;
    }

    #searchResults .list-group-item.active {
        background: #e8f4fd;
        color: #0088cc;
        border-color: #0088cc;
    }

    #selectedUsers .badge {
        cursor: default;
    }

    #selectedUsers .badge i {
        opacity: 0.7;
        transition: opacity 0.2s;
    }

    #selectedUsers .badge i:hover {
        opacity: 1;
    }
</style>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

<div class="chat-container">
    <!-- Left Sidebar - Thread List -->
    <div class="thread-list">
        <div class="thread-list-header">
            <div style="display: flex; justify-content: space-between; align-items: center;">
                <h5 style="margin: 0;"><i class="bi bi-chat-dots me-2"></i>Messages</h5>
                <button class="btn btn-primary btn-sm" onclick="openNewChatModal()" style="border-radius: 20px;">
                    <i class="bi bi-plus-circle"></i> New Chat
                </button>
            </div>
        </div>

        <div class="search-box">
            <input type="text" id="searchInput" placeholder="Search conversations..." />
        </div>

        <div class="threads-scroll" id="threadsList">
            @if (Model == null || !Model.Any())
            {
            <div style="padding: 40px 20px; text-align: center; color: #8e8e93;">
                <i class="bi bi-chat-text" style="font-size: 50px; opacity: 0.3;"></i>
                <p style="margin-top: 15px;">No conversations yet</p>
            </div>
            }
            else
            {
            @foreach (var thread in Model)
            {
            <a href="@Url.Action("Thread", "Chat", new { threadId = thread.Id })"
               class="thread-item"
               data-thread-name="@thread.ThreadName.ToLower()">
                <div class="thread-avatar">
                    @thread.ThreadName.Substring(0, 1).ToUpper()
                </div>
                <div class="thread-content">
                    <div class="thread-header">
                        <span class="thread-name">@thread.ThreadName</span>
                        <span class="thread-time">
                                    @if (thread.Segments.Any())
                            {
                            var latestSegment = thread.Segments.OrderByDescending(s => s.StartTime).First();
                            @latestSegment.StartTime.ToString("HH:mm")
                            }
                                </span>
                    </div>
                    <div class="thread-preview">
                        @thread.LastMessageContent
                    </div>
                </div>
            </a>
            }
            }
        </div>
    </div>

    <!-- Right Panel - Empty State -->
    <div class="chat-panel">
        <div class="empty-state">
            <i class="bi bi-chat-left-text"></i>
            <h4>Select a conversation</h4>
            <p>Choose a conversation from the list to start messaging</p>
        </div>
    </div>
</div>

<!-- Modal tạo chat mới -->
<div class="modal fade" id="newChatModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="bi bi-chat-dots"></i> New Conversation
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label">Chat Name (optional)</label>
                    <input type="text"
                           class="form-control"
                           id="chatName"
                           placeholder="Enter chat name...">
                </div>

                <div class="mb-3">
                    <label class="form-label">Search Users</label>
                    <input type="text"
                           class="form-control"
                           id="userSearch"
                           placeholder="Type to search users..."
                           autocomplete="off">
                    <div id="searchResults" class="list-group mt-2" style="max-height: 300px; overflow-y: auto;"></div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Selected Users</label>
                    <div id="selectedUsers" class="d-flex flex-wrap gap-2">
                        <span class="text-muted">No users selected</span>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="createNewChat()" id="createChatBtn" disabled>
                    <i class="bi bi-check-circle"></i> Create Chat
                </button>
            </div>
        </div>
    </div>
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

@section Scripts {
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
    let selectedUsers = [];
    let searchTimeout = null;
    let newChatModal = null;

    // Open new chat modal
    function openNewChatModal() {
        if (!newChatModal) {
            newChatModal = new bootstrap.Modal(document.getElementById('newChatModal'));
        }

        // Reset form
        document.getElementById('chatName').value = '';
        document.getElementById('userSearch').value = '';
        document.getElementById('searchResults').innerHTML = '';
        selectedUsers = [];
        updateSelectedUsers();

        newChatModal.show();
    }

    // Search users with debounce
    document.addEventListener('DOMContentLoaded', function() {
        const searchInput = document.getElementById('userSearch');

        if (searchInput) {
            searchInput.addEventListener('input', function(e) {
                clearTimeout(searchTimeout);
                const query = e.target.value.trim();

                if (query.length < 2) {
                    document.getElementById('searchResults').innerHTML = '';
                    return;
                }

                searchTimeout = setTimeout(() => searchUsers(query), 300);
            });
        }
    });

    // Search users via API
    async function searchUsers(query) {
        try {
            const response = await fetch(`/api/chat/search-users?query=${encodeURIComponent(query)}`);
            const users = await response.json();

            const resultsDiv = document.getElementById('searchResults');

            if (users.length === 0) {
                resultsDiv.innerHTML = '<div class="list-group-item text-muted">No users found</div>';
                return;
            }

            resultsDiv.innerHTML = users.map(user => `
                    <button type="button" 
                            class="list-group-item list-group-item-action ${selectedUsers.some(u => u.id === user.id) ? 'active' : ''}" 
                            onclick="toggleUser('${user.id}', '${escapeHtml(user.username)}', '${escapeHtml(user.email || '')}')">
                        <div class="d-flex align-items-center">
                            <div style="width: 40px; height: 40px; border-radius: 50%; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); display: flex; align-items: center; justify-content: center; color: white; font-weight: bold; margin-right: 12px;">
                                ${user.username.substring(0, 1).toUpperCase()}
                            </div>
                            <div>
                                <div style="font-weight: 600;">${escapeHtml(user.username)}</div>
                                ${user.email ? `<small class="text-muted">${escapeHtml(user.email)}</small>` : ''}
                            </div>
                            ${selectedUsers.some(u => u.id === user.id) ? '<i class="bi bi-check-circle ms-auto"></i>' : ''}
                        </div>
                    </button>
                `).join('');
        } catch (error) {
            console.error('Error searching users:', error);
            document.getElementById('searchResults').innerHTML =
                '<div class="list-group-item text-danger">Error searching users</div>';
        }
    }

    // Toggle user selection
    function toggleUser(id, username, email) {
        const index = selectedUsers.findIndex(u => u.id === id);

        if (index > -1) {
            selectedUsers.splice(index, 1);
        } else {
            selectedUsers.push({ id, username, email });
        }

        updateSelectedUsers();

        // Re-render search results to update active state
        const query = document.getElementById('userSearch').value;
        if (query) searchUsers(query);
    }

    // Update selected users display
    function updateSelectedUsers() {
        const container = document.getElementById('selectedUsers');
        const createBtn = document.getElementById('createChatBtn');

        if (selectedUsers.length === 0) {
            container.innerHTML = '<span class="text-muted">No users selected</span>';
            createBtn.disabled = true;
        } else {
            container.innerHTML = selectedUsers.map(user => `
                    <span class="badge bg-primary" style="font-size: 14px; padding: 8px 12px;">
                        ${escapeHtml(user.username)}
                        <i class="bi bi-x-circle ms-1" 
                           style="cursor: pointer;" 
                           onclick="toggleUser('${user.id}', '${escapeHtml(user.username)}', '${escapeHtml(user.email || '')}')"></i>
                    </span>
                `).join('');
            createBtn.disabled = false;
        }
    }

    // Create new chat
    async function createNewChat() {
        if (selectedUsers.length === 0) {
            alert('Please select at least one user');
            return;
        }

        const chatName = document.getElementById('chatName').value.trim();
        const createBtn = document.getElementById('createChatBtn');

        createBtn.disabled = true;
        createBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-1"></span> Creating...';

        try {
            console.log('Creating chat with users:', selectedUsers);

            const response = await fetch('/api/chat/create-thread', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'Accept': 'application/json'
                },
                body: JSON.stringify({
                    threadName: chatName || null,
                    userIds: selectedUsers.map(u => u.username)
                })
            });

            console.log('Response status:', response.status);

            if (!response.ok) {
                const errorText = await response.text();
                console.error('Server error:', errorText);
                throw new Error(`Server returned ${response.status}: ${errorText}`);
            }

            const result = await response.json();
            console.log('Create thread result:', result);

            if (result.success && result.threadId) {
                console.log('Redirecting to thread:', result.threadId);

                // FIXED: Đúng route cho MVC View
                window.location.href = `/Chat/Thread/${result.threadId}`;
            } else {
                throw new Error(result.message || 'Failed to create chat');
            }
        } catch (error) {
            console.error('Error creating chat:', error);
            alert('Error creating chat: ' + error.message);

            createBtn.disabled = false;
            createBtn.innerHTML = '<i class="bi bi-check-circle"></i> Create Chat';
        }
}

    // Escape HTML
    function escapeHtml(text) {
        const div = document.createElement('div');
        div.textContent = text;
        return div.innerHTML;
    }

    // Search functionality (existing)
    document.getElementById('searchInput').addEventListener('input', function(e) {
        const searchTerm = e.target.value.toLowerCase();
        const threads = document.querySelectorAll('.thread-item');

        threads.forEach(thread => {
            const threadName = thread.getAttribute('data-thread-name');
            if (threadName.includes(searchTerm)) {
                thread.style.display = 'flex';
            } else {
                thread.style.display = 'none';
            }
        });
    });
</script>
}