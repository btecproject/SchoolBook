    async function calculateFingerprint(key1, key2) {
        const cleanKey = (k) => k.replace(/-----BEGIN PUBLIC KEY-----/g, '')
            .replace(/-----END PUBLIC KEY-----/g, '')
            .replace(/[\n\r]/g, '')
            .trim();

        const k1 = cleanKey(key1);
        const k2 = cleanKey(key2);
        
        const sortedKeys = [k1, k2].sort();
        const combinedString = sortedKeys.join('');

        const msgBuffer = new TextEncoder().encode(combinedString);
        const hashBuffer = await crypto.subtle.digest('SHA-256', msgBuffer);
        const hashArray = Array.from(new Uint8Array(hashBuffer));

        let numberString = "";
        for (const byte of hashArray) {
            numberString += byte.toString().padStart(3, '0');
        }
        //Lấy 30 số đầu
        return numberString.substring(0, 30);
    }

    function formatFingerprint(numberString) {
        const chunks = numberString.match(/.{1,5}/g);
        return chunks.map(chunk => `<span class="safety-group">${chunk}</span>`).join('');
    }
    
