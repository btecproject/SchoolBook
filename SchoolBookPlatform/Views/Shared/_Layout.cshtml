<script src="~/js/StorageHelper.js"></script>

<script>
    //===Search===
    document.addEventListener('DOMContentLoaded', function() {
        const searchInput = document.getElementById('globalSearchInput');
        const searchResults = document.getElementById('globalSearchResults');
        const searchTypeBtn = document.getElementById('searchTypeBtn');
        const searchTypeIcon = document.getElementById('searchTypeIcon');
        
        let currentSearchType = 'user';
        let debounceTimer;

        // Xử lý chuyển đổi loại tìm kiếm
        document.querySelectorAll('.search-type-option').forEach(option => {
            option.addEventListener('click', function(e) {
                e.preventDefault();
                document.querySelectorAll('.search-type-option').forEach(opt => opt.classList.remove('active'));
                this.classList.add('active');
                currentSearchType = this.dataset.type;

                if (currentSearchType === 'user') {
                    searchTypeIcon.className = 'fas fa-user text-muted';
                    searchInput.placeholder = 'Tìm kiếm người dùng...';
                } else {
                    searchTypeIcon.className = 'fas fa-newspaper text-muted';
                    searchInput.placeholder = 'Tìm kiếm bài viết...';
                }

                // Trigger search lại nếu đang có text
                if (searchInput.value.trim()) {
                    performSearch(searchInput.value);
                }
            });
        });

        const debounce = (func, delay) => {
            return (...args) => {
                clearTimeout(debounceTimer);
                debounceTimer = setTimeout(() => func.apply(this, args), delay);
            };
        };

        const performSearch = async (query) => {
            if (!query.trim()) {
                searchResults.style.display = 'none';
                return;
            }

            const endpoint = currentSearchType === 'user'
                ? `/Home/SearchUsers?query=${encodeURIComponent(query)}`
                : `/Home/SearchPosts?query=${encodeURIComponent(query)}`;

            try {
                const response = await fetch(endpoint);
                const result = await response.json();

                if (result.success && result.data.length > 0) {
                    if (currentSearchType === 'user') {
                        renderUserResults(result.data);
                    } else {
                        renderPostResults(result.data);
                    }
                } else {
                    renderNoResults();
                }
            } catch (error) {
                console.error('Lỗi tìm kiếm:', error);
            }
        };

        const renderUserResults = (users) => {
            searchResults.innerHTML = '';
            searchResults.innerHTML += '<div class="dropdown-header">Người dùng</div>';

            users.forEach(user => {
                const avatarSrc = user.avatar || '/images/avatars/default.png';
                const profileUrl = `/Profile?username=${user.username}`;

                const item = document.createElement('a');
                item.href = profileUrl;
                item.className = 'search-result-item border-bottom';
                item.innerHTML = `
                    <img src="${avatarSrc}" alt="${user.username}" class="search-avatar">
                    <div class="search-info">
                        <div class="search-title">${user.username}</div>
                        <span class="search-subtext">Người dùng</span>
                    </div>
                `;
                searchResults.appendChild(item);
            });
            searchResults.style.display = 'block';
        };

        const renderPostResults = (posts) => {
            searchResults.innerHTML = '';
            searchResults.innerHTML += '<div class="dropdown-header">Bài viết</div>';

            posts.forEach(post => {
                const postUrl = `/Post/Details/${post.id}`;
                const date = new Date(post.createdAt).toLocaleDateString('vi-VN');
                const authorAvatar = post.authorAvatar || '/images/avatars/default.png';

                const item = document.createElement('a');
                item.href = postUrl;
                item.className = 'search-result-item border-bottom';

                item.innerHTML = `
                    <div class="search-post-icon">
                        <i class="fas fa-file-alt"></i>
                    </div>
                    <div class="search-info">
                        <div class="search-title">${post.title}</div>
                        <span class="search-subtext text-truncate">${post.content}</span>
                        <div class="d-flex align-items-center mt-1">
                            <img src="${authorAvatar}" class="rounded-circle me-1" width="16" height="16">
                            <small class="text-muted" style="font-size: 0.75rem;">
                                ${post.authorName} • ${date}
                            </small>
                        </div>
                    </div>
                `;
                searchResults.appendChild(item);
            });
            searchResults.style.display = 'block';
        };

        const renderNoResults = () => {
            const text = currentSearchType === 'user' ? 'người dùng' : 'bài viết';
            searchResults.innerHTML = `
                <div class="no-results">
                    <i class="fas fa-search mb-2 fa-2x text-muted"></i><br>
                    Không tìm thấy ${text} nào phù hợp
                </div>
            `;
            searchResults.style.display = 'block';
        };

        if (searchInput) {
            searchInput.addEventListener('input', debounce((e) => {
                performSearch(e.target.value);
            }, 300));

            document.addEventListener('click', (e) => {
                // Sửa logic click outside để bao gồm cả nút dropdown type
                const isClickInside = searchInput.contains(e.target) ||
                    searchResults.contains(e.target) ||
                    searchTypeBtn.contains(e.target) ||
                    e.target.closest('.dropdown-menu');

                if (!isClickInside) {
                    searchResults.style.display = 'none';
                }
            });

            searchInput.addEventListener('focus', () => {
                if (searchInput.value.trim() && searchResults.children.length > 0) {
                    searchResults.style.display = 'block';
                }
            });
        }
    });
    
    
    //===Side bar===
    // Sidebar toggle functionality
    function toggleSidebar() {
        const sidebar = document.getElementById('sidebar');
        sidebar.classList.toggle('collapsed');
        
        // Save preference to localStorage
        const isCollapsed = sidebar.classList.contains('collapsed');
        localStorage.setItem('sidebarCollapsed', isCollapsed);
        
        // Adjust main content padding
        adjustMainContent();
    }
    
    function adjustMainContent() {
        const sidebar = document.getElementById('sidebar');
        const isCollapsed = sidebar.classList.contains('collapsed');
        const sidebarWidth = isCollapsed ? 80 : 256;
        
        // Adjust main content margin
        const mainContent = document.querySelector('.main-content');
        if (mainContent) {
            mainContent.style.marginLeft = `${sidebarWidth + 30}px`;
            mainContent.style.transition = 'margin-left 0.3s ease';
        }
    }
    
    // Initialize sidebar state
    // Sửa phần JavaScript để kiểm tra chính xác hơn
    document.addEventListener('DOMContentLoaded', function() {
        const sidebar = document.getElementById('sidebar');
        const footer = document.getElementById('sidebarFooter');

        // Restore sidebar state
        const savedSidebarState = localStorage.getItem('sidebarCollapsed');
        if (savedSidebarState === 'true') {
            sidebar.classList.add('collapsed');
        }

        // Restore footer state
        const savedFooterState = localStorage.getItem('footerExpanded');
        if (footer && savedFooterState === 'true') {
            footer.classList.add('expanded');
            const icon = footer.querySelector('.sidebar-footer-toggle i');
            if (icon) {
                icon.className = 'fas fa-caret-up';
            }
        }

        // const currentPath = window.location.pathname.toLowerCase();
        // document.querySelectorAll('.sidebar-button').forEach(button => {
        //     const buttonHref = button.getAttribute('href');
        //     if (buttonHref) {
        //         const buttonPath = buttonHref.toLowerCase();
        //         // Chỉ active khi path trùng chính xác
        //         if (currentPath === buttonPath) {
        //             button.classList.add('active');
        //         } else {
        //             button.classList.remove('active');
        //         }
        //     }
        // });

        adjustMainContent();

        // Handle responsive behavior
        function handleResponsive() {
            if (window.innerWidth <= 768) {
                sidebar.classList.add('collapsed');
            }
        }

        window.addEventListener('resize', handleResponsive);
        handleResponsive();

        // Close sidebar when clicking outside on mobile
        if (window.innerWidth <= 768) {
            document.addEventListener('click', function(event) {
                const sidebar = document.getElementById('sidebar');
                const isClickInsideSidebar = sidebar.contains(event.target);
                const isToggleButton = event.target.closest('.sidebar-toggle');

                if (!isClickInsideSidebar && !isToggleButton && !sidebar.classList.contains('collapsed')) {
                    sidebar.classList.add('collapsed');
                    adjustMainContent();
                }
            });
        }
    });
</script>

