@using System.Security.Claims
@{
    var currentUserId = User.FindFirstValue(ClaimTypes.NameIdentifier);
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - SchoolBook Platform</title>
    @await RenderSectionAsync("Styles", required: false)
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/page/home.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/sidebar.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/page/feed.css" asp-append-version="true"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        /* Additional inline styles for better spacing */
        .navbar.fixed-top {
            height: 70px;
            z-index: 1030;
        }
        body {
            padding-top: 70px;
        }

        .search-result-item {
            padding: 10px 15px;
            transition: background-color 0.2s;
            cursor: pointer;
            display: flex;
            align-items: center;
            text-decoration: none;
            color: #212529;
        }
        .search-result-item:hover {
            background-color: #f8f9fa;
            color: #212529;
        }

        /* Style riêng cho User */
        .search-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            object-fit: cover;
            margin-right: 12px;
            border: 1px solid #dee2e6;
        }

        /* Style riêng cho Post */
        .search-post-icon {
            width: 40px;
            height: 40px;
            background-color: #e9ecef;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 12px;
            color: #6c757d;
        }

        .search-info {
            flex: 1;
            overflow: hidden;
        }
        .search-title {
            font-weight: 600;
            font-size: 0.95rem;
            margin-bottom: 2px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }
        .search-subtext {
            font-size: 0.8rem;
            color: #6c757d;
            display: block;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }
        .no-results {
            padding: 20px;
            text-align: center;
            color: #6c757d;
        }
    </style>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Authen" asp-action="Login">SchoolBook</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <!-- Search-->
                <div class="mx-auto position-relative d-none d-md-block" style="width: 500px;">
                    <div class="input-group">
                        <button class="btn btn-light border border-end-0 dropdown-toggle" type="button" 
                                data-bs-toggle="dropdown" aria-expanded="false" id="searchTypeBtn">
                            <i class="fas fa-user text-muted" id="searchTypeIcon"></i>
                        </button>
                        <ul class="dropdown-menu">
                            <li>
                                <a class="dropdown-item active search-type-option" href="#" data-type="user">
                                    <i class="fas fa-user me-2"></i>Người dùng
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item search-type-option" href="#" data-type="post">
                                    <i class="fas fa-newspaper me-2"></i>Bài viết
                                </a>
                            </li>
                        </ul>

                        <input type="text" 
                               id="globalSearchInput" 
                               class="form-control bg-light border-start-0" 
                               placeholder="Tìm kiếm người dùng..." 
                               autocomplete="off">
        
                        <span class="input-group-text bg-light border-start-0">
                            <i class="fas fa-search text-muted"></i>
                        </span>
                    </div>
                    <div id="globalSearchResults" class="dropdown-menu w-100 shadow mt-1 border-0" 
                         style="display: none; max-height: 500px; overflow-y: auto;">
                    </div>
                </div>
                
                
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Authen" asp-action="Login">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        @if (User.IsInRole("HighAdmin") || User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Admin" asp-action="Index">
                                    <i class="bi bi-people"></i> User Management
                                </a>
                            </li>
                        }

                        @if (User.IsInRole("HighAdmin") || User.IsInRole("Moderator"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Admin" asp-action="ApprovePosts">
                                    <i class="fas fa-check-circle"></i> Post Approval
                                </a>
                            </li>
                        }

                        @if (User.IsInRole("HighAdmin") || User.IsInRole("Moderator"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Admin" asp-action="Reports">
                                    <i class="fas fa-flag"></i> Post Report
                                </a>
                            </li>
                        }

                        @if (User.IsInRole("HighAdmin") || User.IsInRole("Moderator"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="MessageReport" asp-action="Index">
                                    <i class="fas bi-mailbox-flag"></i> Chat Report
                                </a>
                            </li>
                        }
                    }
                </ul>
                <ul class="navbar-nav">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <a asp-action="Index" asp-controller="Chat" class="nav-link text-dark">
                            <i class="bi bi-chat"></i> Chat
                        </a>
                        <li class="nav-item d-flex align-items-center gap-1">
                            @foreach (var claim in User.Claims.Where(c => c.Type == ClaimTypes.Role))
                            {
                                var role = claim.Value;
                                var badgeClass = role switch
                                {
                                    "HighAdmin" => "bg-danger",
                                    "Admin" => "bg-warning text-dark",
                                    "Moderator" => "bg-info text-dark",
                                    "Teacher" => "bg-success",
                                    "Student" => "bg-secondary",
                                    _ => "bg-light text-dark"
                                };
                                <span class="badge @badgeClass">@role</span>
                            }
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <img src="/api/AvatarApi?userId=@currentUserId"
                                     alt="~/Images/Avatars/default.png"
                                     class="rounded-circle"
                                     width="20" height="20"
                                     style="object-fit: cover;"> Hello, @User.Identity.Name
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="userDropdown">
                                <li>
                                    <a class="dropdown-item" asp-controller="Profile" asp-action="Index" asp-route-username="@User.Identity?.Name">
                                        <i class="bi bi-person"></i> Profile
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Setting" asp-action="Index">
                                        <i class="bi bi-gear"></i> Setting
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form asp-controller="Authen" asp-action="Logout" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="dropdown-item text-danger" onclick="StorageHelper.clear()">
                                            <i class="bi bi-box-arrow-right"></i>Log out
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>

                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Authen" asp-action="Login">Login</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>

<!-- Sidebar mới với nền trắng -->
<div class="sidebar-container" id="sidebar">
    <div class="sidebar-header">
        <a href="/" class="sidebar-title">
            <i class="fas fa-book me-1"></i>SchoolBook
        </a>
        <button class="sidebar-toggle" onclick="toggleSidebar()">
            <span class="sidebar-toggle-burger"></span>
        </button>
    </div>
    
    <div class="sidebar-content">
        <!-- Feed Section -->
        <div class="sidebar-section-title">
            <span>Feed</span>
        </div>
        
        @{
            // Lấy controller và action hiện tại
            var currentController = ViewContext.RouteData.Values["Controller"]?.ToString();
            var currentAction = ViewContext.RouteData.Values["Action"]?.ToString();
            var isFeedsHome = currentController == "Feeds" && currentAction == "Home";
            var isFeedsFollowing = currentController == "Feeds" && currentAction == "Following";
        }
        
        <a class="sidebar-button @(isFeedsHome ? "active" : "")" 
           href="@Url.Action("Home", "Feeds")">
            <i class="fas fa-globe"></i>
            <span>For You</span>
        </a>
        
        <a class="sidebar-button @(isFeedsFollowing ? "active" : "")" 
           href="@Url.Action("Following", "Feeds")">
            <i class="fas fa-user-friends"></i>
            <span>Following</span>
        </a>
        
        <div class="sidebar-divider"></div>
        
        <!-- Features Section -->
        <div class="sidebar-section-title">
            <span>Features</span>
        </div>
        @{
            var isChatIndex = currentController == "Chat" && currentAction == "Index";
            var isUserManageIndex = currentController == "Admin" && currentAction == "Index";
            var isApprovePost = currentController == "Admin" && currentAction == "ApprovePosts";
            var isReportManage = currentController == "Admin" && currentAction == "Reports";
            var isChatManage = currentController == "MessageReportController" && currentAction == "Index";
            var isProfileIndex = currentController == "Profile" && currentAction == "Index";
            var isSettingIndex = currentController == "Setting" && currentAction == "Index";
        }
        <a class="sidebar-button @(isChatIndex ? "active" : "")" href="@Url.Action("Index", "Chat")">
            <i class="fas fa-comments"></i>
            <span>Chat</span>
        </a>
        
        @if (User.IsInRole("HighAdmin") || User.IsInRole("Admin"))
        {
            <a class="sidebar-button @(isUserManageIndex ? "active" : "")" href="@Url.Action("Index", "Admin")">
                <i class="fas fa-users-cog"></i>
                <span>User Management</span>
            </a>
        }
        <!-- Administration Section -->
        @if (User.IsInRole("HighAdmin") || User.IsInRole("Moderator"))
        {
            <a class="sidebar-button @(isApprovePost ? "active" : "")" href="@Url.Action("ApprovePosts", "Admin")">
                <i class="fas fa-check-circle"></i>
                <span>Approve Posts</span>
                @await Component.InvokeAsync("PendingPostsBadge")
            </a>
            
            <a class="sidebar-button @(isReportManage ? "active" : "")" href="@Url.Action("Reports", "Admin")">
                <i class="fas fa-flag"></i>
                <span>Post Report</span>
                @await Component.InvokeAsync("PendingReportsBadge")
            </a>
            <a class="sidebar-button @(isChatManage ? "active" : "")" href="@Url.Action("Index", "MessageReport")">
                <i class="fas bi-mailbox-flag"></i>
                <span>Chat Report</span>
                @* @await Component.InvokeAsync("PendingReportsBadge") *@
            </a>
        }
        
        <a class="sidebar-button @(isProfileIndex ? "active" : "")" href="@Url.Action("Index", "Profile", new { username = User.Identity?.Name })">
            <i class="fas fa-user"></i>
            <span>Profile</span>
        </a>
        
        <a class="sidebar-button @(isSettingIndex ? "active" : "")" href="@Url.Action("Index", "Setting")">
            <i class="fas fa-cog"></i>
            <span>Settings</span>
        </a>
        
        <div class="sidebar-divider"></div>
        
        
        <!-- Legal Section -->
        <div class="sidebar-section-title">
            <span>Legal</span>
        </div>
        
        <a class="sidebar-button" href="@Url.Action("Privacy", "Home")">
            <i class="fas fa-shield-alt"></i>
            <span>Privacy Policy</span>
        </a>
        
        <a class="sidebar-button" href="@Url.Action("Index", "Term")">
            <i class="fas fa-file-contract"></i>
            <span>Terms of Service</span>
        </a>
    </div>
    
    <!-- Footer với user info -->
    @if (User.Identity?.IsAuthenticated == true)
    {
        <div class="sidebar-footer expanded" id="sidebarFooter">
            <div class="sidebar-footer-header">
                <div class="sidebar-footer-avatar">
                    <img src="/api/AvatarApi?userId=@currentUserId" 
                         alt="~/Images/Avatars/default.png"
                         class="rounded-circle"
                         width="40" height="40"
                         style="object-fit: cover;">
                </div>
                <div class="sidebar-footer-userinfo">
                    <div class="sidebar-footer-username">@User.Identity.Name</div>
                    <div class="sidebar-footer-role">
                        @foreach (var claim in User.Claims.Where(c => c.Type == ClaimTypes.Role))
                        {
                            var role = claim.Value;
                            <span class="role-badge @(role == "HighAdmin" ? "bg-danger" : 
                                                    role == "Admin" ? "bg-warning text-dark" : 
                                                    role == "Moderator" ? "bg-info text-dark" : 
                                                    role == "Teacher" ? "bg-success" : 
                                                    role == "Student" ? "bg-secondary" : "bg-light text-dark")">
                                @role
                            </span>
                        }
                    </div>
                </div>

            </div>
            <div class="sidebar-footer-content">
                <form asp-controller="Authen" asp-action="Logout" method="post" class="mb-3">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="logout-btn-sidebar">
                        <i class="fas fa-sign-out-alt"></i>
                        <span>Log out</span>
                    </button>
                </form>
                <small class="d-block text-center text-muted">
                    &copy; @DateTime.Now.Year SchoolBook Platform
                </small>
            </div>
        </div>
    }
    else
    {
        <div class="sidebar-footer">
            <div class="sidebar-footer-header">
                <div class="sidebar-footer-avatar">
                    <i class="fas fa-user-circle" style="font-size: 36px; color: #adb5bd;"></i>
                </div>
                <div class="sidebar-footer-userinfo">
                    <div class="sidebar-footer-username">Guest</div>
                    <div class="sidebar-footer-role">Not logged in</div>
                </div>
            </div>
            <div class="sidebar-footer-content">
                <a href="@Url.Action("Login", "Authen")" class="btn btn-primary btn-sm w-100 mb-2">
                    <i class="fas fa-sign-in-alt"></i> Login
                </a>
            </div>
        </div>
    }
</div>

