@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - SchoolBook Platform</title>
    @await RenderSectionAsync("Styles", required: false)
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/page/home.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/sidebar.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/page/feed.css" asp-append-version="true"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        /* Additional inline styles for better spacing */
        .navbar.fixed-top {
            height: 70px;
            z-index: 1030;
        }
        
        body {
            padding-top: 70px;
        }
    </style>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Authen" asp-action="Login">SchoolBook</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Authen" asp-action="Login">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        @if (User.IsInRole("HighAdmin") || User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Admin" asp-action="Index">
                                    <i class="bi bi-people"></i> User Management
                                </a>
                            </li>
                        }
                        @if (User.IsInRole("HighAdmin") || User.IsInRole("Moderator"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark position-relative" asp-controller="Admin" asp-action="Reports">
                                    <i class="bi bi-flag"></i> Quản lý báo cáo
                                    @await Component.InvokeAsync("PendingReportsBadge")
                                </a>
                            </li>
                        }
                    }
                </ul>
                <ul class="navbar-nav">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <a asp-action="Index" asp-controller="Chat" class="nav-link text-dark">
                            <i class="bi bi-chat"></i> Chat
                        </a>
                        <li class="nav-item d-flex align-items-center gap-1">
                            @foreach (var claim in User.Claims.Where(c => c.Type == ClaimTypes.Role))
                            {
                                var role = claim.Value;
                                var badgeClass = role switch
                                {
                                    "HighAdmin" => "bg-danger",
                                    "Admin" => "bg-warning text-dark",
                                    "Moderator" => "bg-info text-dark",
                                    "Teacher" => "bg-success",
                                    "Student" => "bg-secondary",
                                    _ => "bg-light text-dark"
                                };
                                <span class="badge @badgeClass">@role</span>
                            }
                        </li>
                            
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle me-1"></i> Hello, @User.Identity.Name
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="userDropdown">
                                <li>
                                    <a class="dropdown-item" asp-controller="Profile" asp-action="Index" asp-route-username="@User.Identity?.Name">
                                        <i class="bi bi-person"></i> Profile
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Setting" asp-action="Index">
                                        <i class="bi bi-gear"></i> Setting
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form asp-controller="Authen" asp-action="Logout" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="dropdown-item text-danger">
                                            <i class="bi bi-box-arrow-right"></i>Log out
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>

                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Authen" asp-action="Login">Login</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>

<!-- Sidebar mới với nền trắng -->
<div class="sidebar-container" id="sidebar">
    <div class="sidebar-header">
        <a href="/" class="sidebar-title">
            <i class="fas fa-book me-1"></i>SchoolBook
        </a>
        <button class="sidebar-toggle" onclick="toggleSidebar()">
            <span class="sidebar-toggle-burger"></span>
        </button>
    </div>
    
    <div class="sidebar-content">
        <!-- Feed Section -->
        <div class="sidebar-section-title">
            <span>Feed</span>
        </div>
        
        <a class="sidebar-button @(ViewBag.ViewType != "following" ? "active" : "")" 
           href="@Url.Action("Home", "Feeds")">
            <i class="fas fa-globe"></i>
            <span>For You</span>
        </a>
        
        <a class="sidebar-button @(ViewBag.ViewType == "following" ? "active" : "")" 
           href="@Url.Action("Following", "Feeds")">
            <i class="fas fa-user-friends"></i>
            <span>Following</span>
        </a>
        
        <div class="sidebar-divider"></div>
        
        <!-- Features Section -->
        <div class="sidebar-section-title">
            <span>Features</span>
        </div>
        
        <a class="sidebar-button" href="@Url.Action("Index", "Chat")">
            <i class="fas fa-comments"></i>
            <span>Chat</span>
        </a>
        
        @if (User.IsInRole("HighAdmin") || User.IsInRole("Admin"))
        {
            <a class="sidebar-button" href="@Url.Action("Index", "Admin")">
                <i class="fas fa-users-cog"></i>
                <span>User Management</span>
            </a>
        }
        
        <div class="sidebar-divider"></div>
        
        <!-- Administration Section -->
        @if (User.IsInRole("HighAdmin") || User.IsInRole("Moderator"))
        {
            <div class="sidebar-section-title">
                <span>QUẢN TRỊ</span>
            </div>
            
            <a class="sidebar-button" href="@Url.Action("ApprovePosts", "Admin")">
                <i class="fas fa-check-circle"></i>
                <span>Duyệt bài đăng</span>
                @await Component.InvokeAsync("PendingPostsBadge")
            </a>
            
            <a class="sidebar-button" href="@Url.Action("Reports", "Admin")">
                <i class="fas fa-flag"></i>
                <span>Quản lý báo cáo</span>
                @await Component.InvokeAsync("PendingReportsBadge")
            </a>
        }
        
        <div class="sidebar-divider"></div>
        
        <!-- Features Section (continued) -->
        <div class="sidebar-section-title">
            <span>FEATURES</span>
        </div>
        
        <a class="sidebar-button" href="@Url.Action("Index", "Profile", new { username = User.Identity?.Name })">
            <i class="fas fa-user"></i>
            <span>Profile</span>
        </a>
        
        <a class="sidebar-button" href="@Url.Action("Index", "Setting")">
            <i class="fas fa-cog"></i>
            <span>Settings</span>
        </a>
        
        <div class="sidebar-divider"></div>
        
        <!-- Legal Section -->
        <div class="sidebar-section-title">
            <span>Legal</span>
        </div>
        
        <a class="sidebar-button" href="@Url.Action("Privacy", "Home")">
            <i class="fas fa-shield-alt"></i>
            <span>Privacy Policy</span>
        </a>
        
        <a class="sidebar-button" href="@Url.Action("Terms", "Home")">
            <i class="fas fa-file-contract"></i>
            <span>Terms of Service</span>
        </a>
    </div>
    
    <!-- Footer với user info -->
    @if (User.Identity?.IsAuthenticated == true)
    {
        <div class="sidebar-footer expanded" id="sidebarFooter">
            <div class="sidebar-footer-header">
                <div class="sidebar-footer-avatar">
                    <img src="https://ui-avatars.com/api/?name=@User.Identity.Name&background=fd964b&color=fff" 
                         alt="@User.Identity.Name">
                </div>
                <div class="sidebar-footer-userinfo">
                    <div class="sidebar-footer-username">@User.Identity.Name</div>
                    <div class="sidebar-footer-role">
                        @foreach (var claim in User.Claims.Where(c => c.Type == ClaimTypes.Role))
                        {
                            var role = claim.Value;
                            <span class="role-badge @(role == "HighAdmin" ? "bg-danger" : 
                                                     role == "Admin" ? "bg-warning text-dark" : 
                                                     role == "Moderator" ? "bg-info text-dark" : 
                                                     role == "Teacher" ? "bg-success" : 
                                                     role == "Student" ? "bg-secondary" : "bg-light text-dark")">
                                @role
                            </span>
                        }
                    </div>
                </div>

            </div>
            <div class="sidebar-footer-content">
                <form asp-controller="Authen" asp-action="Logout" method="post" class="mb-3">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="logout-btn-sidebar">
                        <i class="fas fa-sign-out-alt"></i>
                        <span>Log out</span>
                    </button>
                </form>
                <small class="d-block text-center text-muted">
                    &copy; @DateTime.Now.Year SchoolBook Platform
                </small>
            </div>
        </div>
    }
    else
    {
        <div class="sidebar-footer">
            <div class="sidebar-footer-header">
                <div class="sidebar-footer-avatar">
                    <i class="fas fa-user-circle" style="font-size: 36px; color: #adb5bd;"></i>
                </div>
                <div class="sidebar-footer-userinfo">
                    <div class="sidebar-footer-username">Guest</div>
                    <div class="sidebar-footer-role">Not logged in</div>
                </div>
            </div>
            <div class="sidebar-footer-content">
                <a href="@Url.Action("Login", "Authen")" class="btn btn-primary btn-sm w-100 mb-2">
                    <i class="fas fa-sign-in-alt"></i> Login
                </a>
            </div>
        </div>
    }
</div>

<!-- Main Content -->
<div class="main-content">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

<script>
    // Sidebar toggle functionality
    function toggleSidebar() {
        const sidebar = document.getElementById('sidebar');
        sidebar.classList.toggle('collapsed');
        
        // Save preference to localStorage
        const isCollapsed = sidebar.classList.contains('collapsed');
        localStorage.setItem('sidebarCollapsed', isCollapsed);
        
        // Adjust main content padding
        adjustMainContent();
    }
    
    function adjustMainContent() {
        const sidebar = document.getElementById('sidebar');
        const isCollapsed = sidebar.classList.contains('collapsed');
        const sidebarWidth = isCollapsed ? 80 : 256;
        
        // Adjust main content margin
        const mainContent = document.querySelector('.main-content');
        if (mainContent) {
            mainContent.style.marginLeft = `${sidebarWidth + 30}px`;
            mainContent.style.transition = 'margin-left 0.3s ease';
        }
    }
    
    // Initialize sidebar state
    document.addEventListener('DOMContentLoaded', function() {
        const sidebar = document.getElementById('sidebar');
        const footer = document.getElementById('sidebarFooter');
        
        // Restore sidebar state
        const savedSidebarState = localStorage.getItem('sidebarCollapsed');
        if (savedSidebarState === 'true') {
            sidebar.classList.add('collapsed');
        }
        
        // Restore footer state
        const savedFooterState = localStorage.getItem('footerExpanded');
        if (footer && savedFooterState === 'true') {
            footer.classList.add('expanded');
            const icon = footer.querySelector('.sidebar-footer-toggle i');
            if (icon) {
                icon.className = 'fas fa-caret-up';
            }
        }
        
        // Set active button based on current page
        const currentPath = window.location.pathname.toLowerCase();
        document.querySelectorAll('.sidebar-button').forEach(button => {
            const buttonPath = button.getAttribute('href').toLowerCase();
            if (currentPath === buttonPath || 
                (currentPath.startsWith(buttonPath) && buttonPath !== '/')) {
                button.classList.add('active');
            }
        });
        
        adjustMainContent();
        
        // Handle responsive behavior
        function handleResponsive() {
            if (window.innerWidth <= 768) {
                sidebar.classList.add('collapsed');
            }
        }
        
        window.addEventListener('resize', handleResponsive);
        handleResponsive();
        
        // Close sidebar when clicking outside on mobile
        if (window.innerWidth <= 768) {
            document.addEventListener('click', function(event) {
                const sidebar = document.getElementById('sidebar');
                const isClickInsideSidebar = sidebar.contains(event.target);
                const isToggleButton = event.target.closest('.sidebar-toggle');
                
                if (!isClickInsideSidebar && !isToggleButton && !sidebar.classList.contains('collapsed')) {
                    sidebar.classList.add('collapsed');
                    adjustMainContent();
                }
            });
        }
    });
</script>

<!-- Toast Container -->
<div aria-live="polite" aria-atomic="true" class="position-fixed top-0 end-0 p-3" style="z-index: 1050;">
    <div id="toast-container"></div>
</div>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>