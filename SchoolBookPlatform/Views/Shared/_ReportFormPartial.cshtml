@model SchoolBookPlatform.ViewModels.Post.ReportFormViewModel

<div class="report-form-container">
    <form asp-controller="PostReport" asp-action="Report" method="post" class="report-form" id="reportForm-@Model.PostId">
        @Html.AntiForgeryToken()
        <input type="hidden" name="postId" value="@Model.PostId" />

        <div class="mb-3">
            <div class="alert alert-light border mb-3">
                <p class="mb-1"><strong>Bài đăng:</strong> @Model.PostTitle</p>
                <p class="mb-0"><strong>Tác giả:</strong> @Model.AuthorName</p>
            </div>

            <label class="form-label fw-semibold">Lý do báo cáo <span class="text-danger">*</span></label>
            <textarea name="reason" class="form-control" rows="5"
                      placeholder="Vui lòng mô tả chi tiết lý do bạn báo cáo bài đăng này..."
                      required></textarea>
            <div class="form-text">
                <i class="fas fa-info-circle me-1"></i>
                Báo cáo của bạn sẽ được gửi đến quản trị viên để xem xét.
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Chọn lý do mẫu (không bắt buộc)</label>
            <div class="d-flex flex-wrap gap-2">
                @* QUAN TRỌNG: Đã xóa onclick, thay bằng class và data-reason *@
                <button type="button" class="btn btn-sm btn-outline-secondary btn-add-reason" data-reason="Nội dung không phù hợp">
                    Nội dung không phù hợp
                </button>
                <button type="button" class="btn btn-sm btn-outline-secondary btn-add-reason" data-reason="Spam hoặc quảng cáo">
                    Spam/quảng cáo
                </button>
                <button type="button" class="btn btn-sm btn-outline-secondary btn-add-reason" data-reason="Ngôn từ không phù hợp">
                    Ngôn từ không phù hợp
                </button>
                <button type="button" class="btn btn-sm btn-outline-secondary btn-add-reason" data-reason="Vấn đề bản quyền">
                    Vấn đề bản quyền
                </button>
            </div>
        </div>

        <div class="d-flex justify-content-end gap-2 pt-2 border-top">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                <i class="fas fa-times me-1"></i> Hủy
            </button>
            <button type="submit" class="btn btn-warning">
                <i class="fas fa-paper-plane me-1"></i> Gửi báo cáo
            </button>
        </div>
    </form>
</div>

<style>
    .report-form-container {
        padding: 5px;
    }

    .report-form textarea {
        resize: vertical;
        min-height: 120px;
        max-height: 250px;
    }

    .report-form textarea:focus {
        border-color: #ffc107;
        box-shadow: 0 0 0 0.25rem rgba(255, 193, 7, 0.25);
    }
</style>