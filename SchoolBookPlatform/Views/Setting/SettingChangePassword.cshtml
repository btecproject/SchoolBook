@model SchoolBookPlatform.ViewModels.Setting.SettingChangePasswordViewModel

@{
    ViewData["Title"] = "Đổi mật khẩu";
    var is2FAVerified = ViewData["2FAVerified"] as bool? == true;
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h4>Đổi mật khẩu</h4>
        </div>
        <div class="card-body">
            @if (TempData["error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <form asp-action="SettingChangePassword" method="post">
                @Html.AntiForgeryToken()
                
                <div class="mb-3">
                    <label asp-for="RecentPassword" class="form-label">Mật khẩu hiện tại</label>
                    <input asp-for="RecentPassword" class="form-control" type="password" />
                    <span asp-validation-for="RecentPassword" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="NewPassword" class="form-label">Mật khẩu mới</label>
                    <input asp-for="NewPassword" class="form-control" type="password" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ConfirmNewPassword" class="form-label">Xác nhận mật khẩu mới</label>
                    <input asp-for="ConfirmNewPassword" class="form-control" type="password" />
                    <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" name="logoutOtherDevices" value="true" checked id="logoutOtherDevices">
                    <label class="form-check-label" for="logoutOtherDevices">
                        Đăng xuất tất cả các thiết bị khác
                    </label>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-key me-2"></i>Đổi mật khẩu
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}