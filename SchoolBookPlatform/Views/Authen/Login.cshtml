@model SchoolBookPlatform.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Đăng nhập";
    var returnUrl = ViewData["ReturnUrl"]?.ToString();
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-lg border-0">
                <div class="card-body p-5">
                    <h3 class="text-center mb-4 fw-bold text-primary">SchoolBook</h3>
                    <h5 class="text-center mb-4 text-muted">Đăng nhập hệ thống</h5>
                    
                    @if (TempData["error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    
                    @* Hiển thị thành công *@
                    @if (TempData["success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    
                    <form asp-action="Login" asp-route-returnUrl="@returnUrl" method="post">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Username -->
                        <div class="mb-3">
                            <label asp-for="Username" class="form-label"></label>
                            <input asp-for="Username" class="form-control form-control-lg"
                                   placeholder="Nhập tên đăng nhập"/>
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <!-- Password -->
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password" class="form-control form-control-lg" placeholder="Nhập mật khẩu"/>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <!-- Checkbox: Remember Me -->
                        <div class="mb-4">
                            <div class="form-check">
                                <input class="form-check-input" asp-for="RememberMe" id="rememberMe" checked/>
                                <label class="form-check-label" for="rememberMe">
                                    <strong>Remember Me</strong>
                                </label>
                            </div>
                        </div>

                        <!-- Ẩn OtpType -->
                        <input asp-for="OtpType" type="hidden"/>

                        <!-- Submit -->
                        <button type="submit" class="btn btn-primary btn-lg w-100">
                            <i class="bi bi-box-arrow-in-right"></i> Đăng nhập
                        </button>
                        
                        <!-- Dòng chữ "Hoặc" -->
                        <div class="d-flex align-items-center my-3">
                            <hr class="flex-grow-1">
                            <span class="mx-2 text-muted fw-bold">Hoặc</span>
                            <hr class="flex-grow-1">
                        </div>

                        <!-- Nút đăng nhập Google -->
                        <a asp-action="GoogleLogin" asp-controller="Authen" class="btn btn-google btn-lg w-100">
                            <i class="bi bi-google"></i> Đăng nhập bằng Google
                        </a>
                        
                    </form>
                    
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        /* Nút Google */
        .btn-google {
            background-color: #ffffff;
            border: 2px solid #47acff !important;
            color: #47acff !important;
            font-weight: 500 !important;
            transition: all 0.3s ease !important;
        }

        .btn-google:hover {
            background-color: #1c98ff;
            color: #ffffff !important;
            box-shadow: 0 4px 12px #014783;
            transform: translateY(-1px);
        }

        .btn-google:active {
            background-color: #2c8c45;
            border-color: #2c8c45;
            box-shadow: none;
            transform: translateY(1px);
        }

        .btn-google i {
            font-size: 1.2rem;
            vertical-align: middle;
        }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>

    <script>
        document.getElementById('rememberMe').addEventListener('change', function () {
            const otpTypeInput = document.querySelector('input[name="OtpType"]');
            otpTypeInput.value = 'Email';
        });

        document.addEventListener('DOMContentLoaded', function () {
            const otpTypeInput = document.querySelector('input[name="OtpType"]');
            otpTypeInput.value = 'Email';
        });
    </script>
}