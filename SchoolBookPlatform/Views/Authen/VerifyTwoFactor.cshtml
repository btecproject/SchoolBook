@* Views/Authen/VerifyTwoFactor.cshtml *@
@model SchoolBookPlatform.ViewModels.TwoFactorA.TwoFactorVerifyViewModel

@{
    ViewData["Title"] = "Xác thực 2 bước";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Xác thực 2 bước</h4>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <i class="fas fa-shield-alt fa-3x text-primary mb-3"></i>
                        <h5>Google Authenticator</h5>
                        <p class="text-muted">Vui lòng mở ứng dụng Google Authenticator và nhập mã 6 chữ số</p>
                    </div>

                    @if (TempData["error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (TempData["success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form asp-action="VerifyTwoFactor" method="post">
                        @Html.AntiForgeryToken()
                        
                        <div class="mb-3">
                            <label asp-for="Code" class="form-label">Mã xác thực</label>
                            <input asp-for="Code" 
                                   class="form-control text-center" 
                                   maxlength="6" 
                                   placeholder="000000"
                                   style="font-size: 1.5rem; letter-spacing: 0.5em;"
                                   autocomplete="one-time-code"
                                   autofocus />
                            <span asp-validation-for="Code" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-check-circle me-2"></i>Xác nhận
                            </button>
                            <a asp-action="LoginWithRecoveryCode" asp-controller="Authen" class="btn btn-primary btn-lg">
                                Mất thiết bị? Chuyển sang dùng mã khôi phục
                            </a>
                            <a asp-action="Login" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Quay lại đăng nhập
                            </a>
                        </div>
                    </form>

                    <div class="mt-4">
                        <div class="alert alert-info">
                            <h6><i class="fas fa-info-circle me-2"></i>Hướng dẫn:</h6>
                            <ul class="mb-0 small">
                                <li>Mở ứng dụng Google Authenticator trên điện thoại</li>
                                <li>Nhập mã 6 chữ số hiển thị trong ứng dụng</li>
                                <li>Mã sẽ thay đổi sau mỗi 30 giây</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        // Auto focus và tự động chuyển input
        document.addEventListener('DOMContentLoaded', function() {
            const codeInput = document.getElementById('Code');
            if (codeInput) {
                codeInput.focus();
                
                // Auto move to next input (nếu có nhiều input)
                codeInput.addEventListener('input', function() {
                    if (this.value.length === 6) {
                        this.form.submit();
                    }
                });
            }
        });
    </script>
}