@using SchoolBookPlatform.ViewModels.Post
@model SchoolBookPlatform.ViewModels.Post.PostDetailsViewModel
@{
    ViewData["Title"] = Model.Post.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@* SỬA LỖI: Thêm dấu ~/ để đường dẫn trỏ về thư mục gốc *@
<link rel="stylesheet" href="~/css/page/detail.css" asp-append-version="true"/>

<div class="container mt-4">
    <div class="d-flex align-items-center mb-3">
        <a href="javascript:history.back()" class="btn btn-back rounded-pill px-3 py-2 fw-semibold text-decoration-none d-inline-flex align-items-center">
            <i class="bi bi-arrow-left me-2"></i> Quay lại
        </a>
    </div>
    <div class="row">
        <div class="col-md-12">
            @* Thông báo *@
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @* Tạo một PostListViewModel từ dữ liệu hiện có để tái sử dụng _PostListPartial *@
            @{
                var postListViewModel = new SchoolBookPlatform.ViewModels.Post.PostListViewModel
                {
                    Posts = new List<SchoolBookPlatform.ViewModels.Post.PostViewModel>
                    {
                        Model.Post
                    },
                    CurrentPage = 1,
                    TotalPages = 1,
                    ViewType = "details"
                };
            }

            @await Html.PartialAsync("_PostListPartial", postListViewModel)

            <div class="modal fade" id="reportModal" tabindex="-1" aria-labelledby="reportModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="reportModalLabel">Báo cáo bài đăng</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body" id="reportModalBody">
                            <div class="text-center py-3">
                                <div class="spinner-border text-primary" role="status">
                                    <span class="visually-hidden">Loading...</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            @* Danh sách comment *@
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">Bình luận (@Model.Comments.Count)</h5>

                    @* Form comment mới *@
                    <div class="mb-3">
                        <textarea id="commentContent" class="form-control" rows="3" 
                                  placeholder="Viết bình luận..."></textarea>
                        <button id="submitComment" class="btn btn-primary btn-sm mt-2"
                                data-post-id="@Model.Post.Id">
                            Gửi bình luận
                        </button>
                    </div>

                    <hr/>

                    @* Danh sách comment *@
                    <div id="commentsList">
                        @foreach (var comment in Model.Comments)
                        {
                            <div class="mb-3 comment-item" data-comment-id="@comment.Id">
                                <div class="d-flex">
                                    <div class="flex-grow-1">
                                        <a asp-controller="Profile" asp-action="Index" asp-route-username="@comment.AuthorName">
                                            <img src="@(string.IsNullOrEmpty(comment.AuthorAvatar) ? "/images/avatars/default.png" : comment.AuthorAvatar)"
                                                 alt="@comment.AuthorName"
                                                 class="rounded-circle"
                                                 width="32" height="32"
                                                 style="object-fit: cover;">
                                        </a>
                                        <strong>@comment.AuthorName</strong>
                                        <small class="text-muted ms-2">@comment.CreatedAt.ToString("g")</small>
                                        <p class="mt-1 mb-1">@comment.Content</p>

                                        @* Replies *@
                                        @if (comment.Replies.Any())
                                        {
                                            <div class="ms-4 mt-2">
                                                @foreach (var reply in comment.Replies)
                                                {
                                                    <div class="mb-2">
                                                        <a asp-controller="Profile" asp-action="Index" asp-route-username="@comment.AuthorName">
                                                            <img src="@(string.IsNullOrEmpty(comment.AuthorAvatar) ? "/images/avatars/default.png" : comment.AuthorAvatar)"
                                                                 alt="@comment.AuthorName"
                                                                 class="rounded-circle"
                                                                 width="32" height="32"
                                                                 style="object-fit: cover;">
                                                        </a>
                                                        <strong>@reply.AuthorName</strong>
                                                        <small class="text-muted ms-2">@reply.CreatedAt.ToString("g")</small>
                                                        <p class="mt-1 mb-0">@reply.Content</p>
                                                    </div>
                                                }
                                            </div>
                                        }
                                    </div>
                                </div>
                                <hr/>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // LƯU Ý: Đã xóa đoạn script xử lý Vote cũ vì postVote.js (được nạp trong _PostListPartial/_Layout) đã xử lý việc này.
        
        // Comment functionality
        document.getElementById('submitComment')?.addEventListener('click', async function() {
            const postId = this.dataset.postId;
            const content = document.getElementById('commentContent').value.trim();
            
            if (!content) {
                alert('Vui lòng nhập nội dung bình luận');
                return;
            }
            
            // Disable button while submitting
            this.disabled = true;
            
            try {
                const response = await fetch('/Post/Comment', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                    },
                    body: `postId=${postId}&content=${encodeURIComponent(content)}`
                });
                
                const data = await response.json();
                if (data.success) {
                    // Reload page to show new comment
                    location.reload();
                } else {
                    alert(data.message || 'Có lỗi xảy ra');
                    this.disabled = false;
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Có lỗi xảy ra khi gửi bình luận');
                this.disabled = false;
            }
        });
    </script>
}