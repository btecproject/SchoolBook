@model SchoolBookPlatform.Models.ViewModels.CreatePostViewModel

@{
    ViewData["Title"] = "Tạo Bài Viết Mới";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">@ViewData["Title"]</h3>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group mb-3">
                        <label asp-for="Title" class="form-label"></label>
                        <input asp-for="Title" class="form-control" placeholder="Nhập tiêu đề bài viết..." />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Content" class="form-label"></label>
                        <textarea asp-for="Content" class="form-control" rows="6" placeholder="Nhập nội dung bài viết..."></textarea>
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="VisibleToRoles" class="form-label"></label>
                        <select asp-for="VisibleToRoles" class="form-select">
                            @foreach (var option in Model.VisibleToOptions)
                            {
                                <option value="@option.Key">@option.Value</option>
                            }
                        </select>
                        <span asp-validation-for="VisibleToRoles" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Attachments" class="form-label"></label>
                        <input asp-for="Attachments" type="file" class="form-control" multiple />
                        <small class="form-text text-muted">Có thể chọn nhiều file cùng lúc</small>
                        <span asp-validation-for="Attachments" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Tạo Bài Viết
                        </button>
                        <a asp-controller="Feeds" asp-action="Home" class="btn btn-secondary">Hủy</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}