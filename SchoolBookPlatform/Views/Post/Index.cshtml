@model SchoolBookPlatform.ViewModels.Post.PostListViewModel
@{
    ViewData["Title"] = "Danh s√°ch b√†i ƒëƒÉng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2>B√†i ƒëƒÉng</h2>
                <a asp-controller="Post" asp-action="Create" class="btn btn-primary">ƒêƒÉng b√†i m·ªõi</a>
            </div>

            @* Hi·ªÉn th·ªã th√¥ng b√°o *@
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (Model.IsEmptyFollowing)
            {
                <div class="empty-following text-center py-5">
                    <i class="fas fa-user-friends fa-3x text-muted mb-3"></i>
                    <h4 class="text-muted">B·∫°n ch∆∞a follow ai</h4>
                    <p class="text-muted">Follow ng∆∞·ªùi kh√°c ƒë·ªÉ xem b√†i ƒëƒÉng c·ªßa h·ªç t·∫°i ƒë√¢y</p>
                    <a href="@Url.Action("Explore", "User")" class="btn btn-primary">
                        <i class="fas fa-search"></i> Kh√°m ph√° ng∆∞·ªùi d√πng
                    </a>
                </div>
            }
            @* Danh s√°ch b√†i ƒëƒÉng *@
            @if (Model.Posts.Any())
            {
                @foreach (var post in Model.Posts)
                {
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start">
                                <div class="flex-grow-1">
                                    <h5 class="card-title">
                                        <a asp-controller="Post" asp-action="Details" asp-route-id="@post.Id" class="text-decoration-none">
                                            @post.Title
                                        </a>
                                    </h5>
                                    <p class="card-text">@post.Content</p>
                                    <small class="text-muted">
                                        ƒêƒÉng b·ªüi: <strong>@post.AuthorName</strong> |
                                        @post.CreatedAt.ToString("g")
                                        @if (!string.IsNullOrEmpty(post.VisibleToRoles) && post.VisibleToRoles != "All")
                                        {
                                            <span class="badge bg-info">@post.VisibleToRoles</span>
                                        }
                                    </small>
                                </div>
                                <div class="d-flex gap-2">
                                    @if (post.IsOwner)
                                    {
                                        <a asp-action="Edit" asp-route-id="@post.Id" class="btn btn-sm btn-primary">
                                            S·ª≠a
                                        </a>
                                    }
                                    @if (post.CanDelete)
                                    {
                                        <form asp-action="Delete" asp-route-id="@post.Id" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-danger"
                                                    onclick="return confirm('B·∫°n c√≥ ch·∫Øc mu·ªën x√≥a b√†i ƒëƒÉng n√†y?');">
                                                X√≥a
                                            </button>
                                        </form>
                                    }
                                </div>
                            </div>

                            @* Hi·ªÉn th·ªã file ƒë√≠nh k√®m (n·∫øu c√≥) *@
                            @if (post.Attachments.Any())
                            {
                                <div class="mt-3">
                                    @{
                                        var images = post.Attachments.Where(a => a.IsImage).ToList();
                                        var files = post.Attachments.Where(a => !a.IsImage).ToList();
                                    }
                                    
                                    @if (images.Any())
                                    {
                                        <div id="carousel-@post.Id" class="carousel slide mb-3" data-bs-ride="carousel">
                                            @* Counter hi·ªÉn th·ªã s·ªë ·∫£nh *@
                                            <div class="carousel-counter">
                                                <span id="current-slide-@post.Id">1</span> / <span id="total-slides-@post.Id">@images.Count</span>
                                            </div>
                                            
                                            @if (images.Count > 1)
                                            {
                                                <div class="carousel-indicators">
                                                    @for (int i = 0; i < images.Count; i++)
                                                    {
                                                        <button type="button" data-bs-target="#carousel-@post.Id" 
                                                                data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")"
                                                                aria-current="@(i == 0 ? "true" : "false")"></button>
                                                    }
                                                </div>
                                            }
                                            
                                            <div class="carousel-inner rounded">
                                                @for (int i = 0; i < images.Count; i++)
                                                {
                                                    var img = images[i];
                                                    <div class="carousel-item @(i == 0 ? "active" : "")" data-slide-index="@(i + 1)">
                                                        <a href="@img.FilePath" target="_blank" class="d-block">
                                                            <img src="@img.FilePath" 
                                                                 class="d-block w-100 post-image"
                                                                 alt="@img.FileName"
                                                                 style="max-height: 500px; object-fit: contain; background: #f8f9fa;" />
                                                        </a>
                                                    </div>
                                                }
                                            </div>
                                            
                                            @if (images.Count > 1)
                                            {
                                                <button class="carousel-control-prev" type="button" data-bs-target="#carousel-@post.Id" data-bs-slide="prev">
                                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                                    <span class="visually-hidden">Previous</span>
                                                </button>
                                                <button class="carousel-control-next" type="button" data-bs-target="#carousel-@post.Id" data-bs-slide="next">
                                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                                    <span class="visually-hidden">Next</span>
                                                </button>
                                            }
                                        </div>
                                    }
                                    
                                    @if (files.Any())
                                    {
                                        <div class="file-list">
                                            <small class="text-muted d-block mb-2">File ƒë√≠nh k√®m:</small>
                                            @foreach (var file in files)
                                            {
                                                <a href="@file.FilePath" target="_blank" 
                                                   class="d-flex align-items-center text-decoration-none text-dark p-2 border rounded mb-2">
                                                    @{
                                                        var icon = "fa-file";
                                                        var extension = System.IO.Path.GetExtension(file.FileName).ToLower();
                                                        var color = "#6c757d";
                                                        
                                                        if (extension == ".pdf") { icon = "fa-file-pdf"; color = "#dc3545"; }
                                                        else if (extension == ".doc" || extension == ".docx") { icon = "fa-file-word"; color = "#0d6efd"; }
                                                        else if (extension == ".xls" || extension == ".xlsx") { icon = "fa-file-excel"; color = "#198754"; }
                                                        else if (extension == ".ppt" || extension == ".pptx") { icon = "fa-file-powerpoint"; color = "#fd7e14"; }
                                                        else if (extension == ".zip" || extension == ".rar") { icon = "fa-file-archive"; color = "#6f42c1"; }
                                                    }
                                                    <i class="fas @icon fa-2x me-3" style="color: @color;"></i>
                                                    <div class="flex-grow-1">
                                                        <div class="fw-medium text-truncate" style="max-width: 300px;">@file.FileName</div>
                                                        <small class="text-muted">@((file.FileSize / 1024f / 1024f).ToString("F2")) MB</small>
                                                    </div>
                                                    <i class="fas fa-download text-primary"></i>
                                                </a>
                                            }
                                        </div>
                                    }
                                </div>
                            }

                            
                            
                            <div class="mt-2">
                                <button class="btn btn-sm btn-outline-primary vote-btn"
                                        data-post-id="@post.Id"
                                        data-vote-type="true">
                                    üëç <span class="upvote-count">@post.UpvoteCount</span>
                                </button>
                                <button class="btn btn-sm btn-outline-danger vote-btn"
                                        data-post-id="@post.Id"
                                        data-vote-type="false">
                                    üëé <span class="downvote-count">@post.DownvoteCount</span>
                                </button>
                                <a asp-controller="Post" asp-action="Details" asp-route-id="@post.Id" class="btn btn-sm btn-outline-secondary">
                                    üí¨ @post.CommentCount
                                </a>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                @* Ki·ªÉm tra xem ƒëang ·ªü tab n√†o *@
                @if (ViewBag.ViewType == "following")
                {
                    @* TH1: ƒêang ·ªü tab Following nh∆∞ng ƒë√£ c√≥ th√¥ng b√°o IsEmptyFollowing ·ªü tr√™n r·ªìi *@
                    @* Kh√¥ng c·∫ßn hi·ªÉn th·ªã th√™m g√¨ *@
                }
                else
                {
                    @* TH2: ƒêang ·ªü tab "For You" (feed chung) m√† kh√¥ng c√≥ b√†i ƒëƒÉng *@
                    <div class="alert alert-info">
                        Ch∆∞a c√≥ b√†i ƒëƒÉng n√†o. H√£y <a asp-controller="Post" asp-action="Create">ƒëƒÉng b√†i ƒë·∫ßu ti√™n</a>!
                    </div>
                }
            }
        </div>
    </div>
</div>

@* Script cho vote (AJAX) *@
@section Scripts {
    <script>
        document.querySelectorAll('.vote-btn').forEach(btn => {
            btn.addEventListener('click', async function() {
                const postId = this.dataset.postId;
                const isUpvote = this.dataset.voteType === 'true';
                
                try {
                    const response = await fetch('/Post/Vote', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/x-www-form-urlencoded',
                        },
                        body: `postId=${postId}&isUpvote=${isUpvote}`
                    });
                    
                    const data = await response.json();
                    if (data.success) {
                        // C·∫≠p nh·∫≠t s·ªë l∆∞·ª£ng vote
                        const card = this.closest('.card');
                        card.querySelector('.upvote-count').textContent = data.upvoteCount;
                        card.querySelector('.downvote-count').textContent = data.downvoteCount;
                    } else {
                        alert(data.message || 'C√≥ l·ªói x·∫£y ra');
                    }
                } catch (error) {
                    console.error('Error:', error);
                    alert('C√≥ l·ªói x·∫£y ra khi vote');
                }
            });
        });

        // JavaScript ƒë·ªÉ c·∫≠p nh·∫≠t s·ªë ƒë·∫øm khi chuy·ªÉn slide
        document.querySelectorAll('.carousel').forEach(carousel => {
            const carouselId = carousel.id;
            const currentSlideSpan = document.getElementById(`current-slide-${carouselId.replace('carousel-', '')}`);
            const totalSlidesSpan = document.getElementById(`total-slides-${carouselId.replace('carousel-', '')}`);

            if (currentSlideSpan && totalSlidesSpan) {
                // L·∫Øng nghe s·ª± ki·ªán slide.bs.carousel
                carousel.addEventListener('slide.bs.carousel', function (event) {
                    const activeSlide = event.to;
                    currentSlideSpan.textContent = activeSlide + 1;
                });
            }
        });
    </script>
}

