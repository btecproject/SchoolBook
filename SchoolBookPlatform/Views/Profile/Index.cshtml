@model SchoolBookPlatform.ViewModels.ProfileViewModel
@{
    ViewData["Title"] = "Hồ sơ cá nhân";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0&icon_names=edit" />
    <link rel="stylesheet" href="css/page/profile.css"/>
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-7">
            <div class="p-4">

                <div class="card-body text-center p-4">

                    <div class="d-flex align-items-center mb-3">
                        <!-- Avatar Container -->
                        <div class="position-relative me-3">

                            <!-- Avatar -->
                            <img src="@(string.IsNullOrEmpty(Model.AvatarUrl) ? "/images/default-avatar.png" : Model.AvatarUrl)"
                                 class="rounded-circle avatar-img"
                                 alt="Avatar">

                            <!-- Nút upload -->
                            <button class="btn btn-sm btn-light avatar-edit-btn"
                                    onclick="document.getElementById('avatar-input').click()">
                                <span class="material-symbols-outlined">
                                    image_arrow_up
                                </span>
                            </button>

                            <!-- Input file ẩn -->
                            <input type="file" id="avatar-input" accept="image/*" style="display:none" onchange="uploadAvatar()" />
                        </div>

                        <!-- User Info -->
                        <div class="user-info-left">
                            <h3 class="fw-bold mb-1">@Model.FullName</h3>
                            <p class="text-muted mb-0">@Model.Username</p>
                        </div>
                    </div>

                    
                    
                    <!-- Bio -->
                    <p id="bio-display">
                        <strong>Giới thiệu:</strong><br>
                        <span>@(Model.Bio ?? "Chưa có mô tả")</span>
                    </p>
                    <button class="btn btn-sm btn-link bio-edit-btn" onclick="editField('bio')">
                        Chỉnh sửa tiểu sử
                    </button>

                    <div id="bio-edit" style="display:none;">
                        <textarea id="bio-input" class="form-control">@Model.Bio</textarea>
                        <div class="edit-actions">
                            <button class="btn btn-success btn-sm"
                                    onclick="saveField('Bio','bio-input','bio-display','bio-edit')">Lưu</button>
                            <button class="btn btn-secondary btn-sm"
                                    onclick="cancelEdit('bio-display','bio-edit')">Hủy</button>
                        </div>
                    </div>



                    <!-- TAB BAR -->
                    <ul class="nav nav-tabs mb-4" id="profileTabs">
                        <li class="nav-item">
                            <a class="nav-link active" data-bs-toggle="tab" href="#posts">Bài viết</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-bs-toggle="tab" href="#info">Thông tin</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-bs-toggle="tab" href="#likes">Bài đã like</a>
                        </li>
                    </ul>
                    <div class="tab-content">

                        <!-- TAB Bài viết -->
                        <div class="tab-pane fade show active" id="posts">
                            <p>Chưa có bài viết nào.</p>
                        </div>

                        <!-- TAB Thông tin cá nhân -->
                        <div class="tab-pane fade" id="info">

                            <div class="text-start px-3">

                                <!-- Email (KHÔNG EDIT) -->
                                <p id="email-display">
                                    <strong>Email:</strong> <span>@Model.Email</span>
                                </p>

                                <!-- Phone -->
                                <p id="phone-display">
                                    <strong>Số điện thoại:</strong> <span>@Model.PhoneNumber</span>
                                    <button class="btn btn-sm btn-link" onclick="editField('phone')">
                                        <span class="material-symbols-outlined">edit</span>
                                    </button>
                                </p>

                                <div id="phone-edit" style="display:none;">
                                    <input id="phone-input" class="form-control" value="@Model.PhoneNumber" />
                                    <button class="btn btn-success btn-sm"
                                            onclick="saveField('PhoneNumber','phone-input','phone-display','phone-edit')">Lưu</button>
                                    <button class="btn btn-secondary btn-sm"
                                            onclick="cancelEdit('phone-display','phone-edit')">Hủy</button>
                                </div>

                                <!-- Gender -->
                                <p id="gender-display">
                                    <strong>Giới tính:</strong> @(Model.Gender ?? "Chưa cập nhật")
                                    <button class="btn btn-sm btn-link" onclick="editField('gender')">
                                        <span class="material-symbols-outlined">edit</span>
                                    </button>
                                </p>
                                <div id="gender-edit" style="display:none;">
                                    <input id="gender-input" class="form-control" value="@Model.Gender" />
                                    <button class="btn btn-success btn-sm"
                                            onclick="saveField('Gender','gender-input','gender-display','gender-edit')">Lưu</button>
                                    <button class="btn btn-secondary btn-sm"
                                            onclick="cancelEdit('gender-display','gender-edit')">Hủy</button>
                                </div>

                                <!-- Birthdate -->
                                <p id="birth-display">
                                    <strong>Ngày sinh:</strong> @(Model.BirthDate?.ToString("dd/MM/yyyy") ?? "Chưa cập nhật")
                                    <button class="btn btn-sm btn-link" onclick="editField('birth')">
                                        <span class="material-symbols-outlined">edit</span>
                                    </button>
                                </p>
                                <div id="birth-edit" style="display:none;">
                                    <input id="birth-input" type="date" class="form-control"
                                           value="@(Model.BirthDate?.ToString("yyyy-MM-dd"))" />
                                    <button class="btn btn-success btn-sm"
                                            onclick="saveField('BirthDate','birth-input','birth-display','birth-edit')">Lưu</button>
                                    <button class="btn btn-secondary btn-sm"
                                            onclick="cancelEdit('birth-display','birth-edit')">Hủy</button>
                                </div>

                                <!-- Created date -->
                                <p>
                                    <strong>Ngày tạo tài khoản:</strong> @Model.CreatedAt.ToString("dd/MM/yyyy")
                                </p>

                            </div>
                        </div>

                        <!-- TAB Bài đã like -->
                        <div class="tab-pane fade" id="likes">
                            <p>Chưa có bài viết nào được like.</p>
                        </div>
                </div>


                </div>
            </div>
        </div>
    </div>
</div>

<script>
function editField(name) {
    document.getElementById(name + "-display").style.display = "none";
    document.getElementById(name + "-edit").style.display = "block";
}

function cancelEdit(displayId, editId) {
    document.getElementById(displayId).style.display = "block";
    document.getElementById(editId).style.display = "none";
}

function saveField(fieldName, inputId, displayId, editId) {

    const value = document.getElementById(inputId).value;

    fetch('/Profile/UpdateField', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ field: fieldName, value: value })
    })
    .then(res => res.json())
    .then(data => {
        if (data.success) {
            // cập nhật text ngay trên UI
            document.querySelector(`#${displayId} span`).innerText = value;
            cancelEdit(displayId, editId);
        } else {
            alert("Có lỗi xảy ra!");
        }
    });
}

// Upload ảnh
    function uploadAvatar() {
    const fileInput = document.getElementById('avatar-input');
    const file = fileInput.files[0];

    if (!file) return;

    const formData = new FormData();
    formData.append("avatar", file);

    fetch('/Profile/UploadAvatar', {
    method: 'POST',
    body: formData
})
    .then(res => res.json())
    .then(data => {
    if (data.success) {
    // cập nhật ảnh ngay lập tức
    document.querySelector("img[alt='Avatar']").src = data.url;
} else {
    alert("Tải ảnh thất bại!");
}
});
}
</script>
