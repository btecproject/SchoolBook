@model SchoolBookPlatform.ViewModels.UserListViewModel

@{
    ViewData["Title"] = "Xóa user";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Xác nhận xóa user</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <strong>Chú ý:</strong> Thao tác này sẽ vô hiệu hóa user (không xóa hoàn toàn). 
                        User sẽ không thể đăng nhập và tất cả tokens sẽ bị hủy.
                    </div>

                    <dl class="row">
                        <dt class="col-sm-4">Username:</dt>
                        <dd class="col-sm-8"><strong>@Model.Username</strong></dd>

                        <dt class="col-sm-4">Email:</dt>
                        <dd class="col-sm-8">@(Model.Email ?? "-")</dd>

                        <dt class="col-sm-4">Số điện thoại:</dt>
                        <dd class="col-sm-8">@(Model.PhoneNumber ?? "-")</dd>

                        <dt class="col-sm-4">Vai trò:</dt>
                        <dd class="col-sm-8">
                            @foreach (var role in Model.Roles)
                            {
                                var badgeClass = role switch
                                {
                                    "HighAdmin" => "bg-danger",
                                    "Admin" => "bg-warning text-dark",
                                    "Moderator" => "bg-info text-dark",
                                    "Teacher" => "bg-success",
                                    "Student" => "bg-secondary",
                                    _ => "bg-light text-dark"
                                };
                                <span class="badge @badgeClass me-1">@role</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Trạng thái:</dt>
                        <dd class="col-sm-8">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">Hoạt động</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Vô hiệu hóa</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Face Registered:</dt>
                        <dd class="col-sm-8">
                            @if (Model.FaceRegistered)
                            {
                                <span class="badge bg-primary"><i class="bi bi-check-circle"></i> Có</span>
                            }
                            else
                            {
                                <span class="badge bg-light text-dark"><i class="bi bi-x-circle"></i> Không</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Ngày tạo:</dt>
                        <dd class="col-sm-8">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</dd>
                    </dl>

                    <form asp-action="Delete" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Quay lại
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Xác nhận xóa
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

