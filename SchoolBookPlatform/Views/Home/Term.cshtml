        // Quick navigation buttons
        document.querySelectorAll('.nav-btn[data-section]').forEach(btn => {
            btn.addEventListener('click', function() {
                const sectionId = this.getAttribute('data-section');
                const section = document.getElementById(sectionId);
                if (section) {
                    window.scrollTo({
                        top: section.offsetTop - 80,
                        behavior: 'smooth'
                    });
                }
            });
        });

        // Scroll to agreement section
        function scrollToAgreement() {
            const agreementSection = document.getElementById('agreementSection');
            if (agreementSection) {
                window.scrollTo({
                    top: agreementSection.offsetTop - 80,
                    behavior: 'smooth'
                });
            }
        }

        // Scroll progress bar and section visibility
        window.addEventListener('scroll', function() {
            const winScroll = document.body.scrollTop || document.documentElement.scrollTop;
            const height = document.documentElement.scrollHeight - document.documentElement.clientHeight;
            const scrolled = (winScroll / height) * 100;
            document.getElementById('progressBar').style.width = scrolled + "%";
            
            // Show sections as they come into view
            const sections = document.querySelectorAll('.content-section');
            sections.forEach(section => {
                const sectionTop = section.getBoundingClientRect().top;
                if (sectionTop < window.innerHeight * 0.75) {
                    section.classList.add('visible');
                }
            });
        });

        // Agreement buttons
        document.getElementById('agreeBtn').addEventListener('click', function() {
            const studentName = prompt("Please enter your full name (as registered at SchoolBook):");
            const studentID = prompt("Please enter your student ID:");
            
            if (studentName && studentID) {
                showModal('Agreement Confirmed', `Thank you, ${studentName} (ID: ${studentID}). Your agreement has been recorded with SchoolBook Academic Affairs. You now have full access to the School Book Forum.`);
                
                localStorage.setItem('btec_termsAgreed', 'true');
                localStorage.setItem('btec_agreementDate', new Date().toISOString());
                localStorage.setItem('btec_studentName', studentName);
                localStorage.setItem('btec_studentID', studentID);
                
                this.innerHTML = `<i class="fas fa-check-circle"></i> Verified - ${studentID}`;
                this.style.background = 'linear-gradient(135deg, var(--primary), var(--primary-dark))';
                
                document.getElementById('disagreeBtn').style.opacity = '0.5';
                document.getElementById('disagreeBtn').style.pointerEvents = 'none';
            } else {
                alert("Both name and student ID are required to agree to the terms.");
            }
        });

        document.getElementById('disagreeBtn').addEventListener('click', function() {
            showModal('Terms Not Accepted', 'You must agree to the Terms of Service to access the School Book Forum. Please contact SchoolBook Academic Affairs if you have questions or concerns.');
            
            this.innerHTML = '<i class="fas fa-exclamation-circle"></i> Terms Not Accepted';
            
            document.querySelectorAll('.btec-rules').forEach(box => {
                box.style.animation = 'pulse 2s infinite';
                box.style.border = '2px solid var(--accent)';
            });
            
            if (!document.querySelector('#pulse-animation')) {
                const style = document.createElement('style');
                style.id = 'pulse-animation';
                style.textContent = `
                    @@keyframes pulse {
                        0% { box-shadow: 0 0 0 0 rgba(231, 76, 60, 0.7); }
                        70% { box-shadow: 0 0 0 10px rgba(231, 76, 60, 0); }
                        100% { box-shadow: 0 0 0 0 rgba(231, 76, 60, 0); }
                    }
                `;
                document.head.appendChild(style);
            }
        });

        // Modal functions
        function showModal(title, text) {
            document.getElementById('modalTitle').textContent = title;
            document.getElementById('modalText').textContent = text;
            document.getElementById('agreementModal').style.display = 'flex';
        }

        document.getElementById('modalCloseBtn').addEventListener('click', function() {
            document.getElementById('agreementModal').style.display = 'none';
        });

        // Close modal when clicking outside
        window.addEventListener('click', function(event) {
            const modal = document.getElementById('agreementModal');
            if (event.target === modal) {
                modal.style.display = 'none';
            }
        });

        // Print functionality
        document.getElementById('printBtn').addEventListener('click', function() {
            window.print();
        });

        // Check for previous agreement
        window.addEventListener('load', function() {
            const termsAgreed = localStorage.getItem('btec_termsAgreed');
            if (termsAgreed === 'true') {
                const studentID = localStorage.getItem('btec_studentID');
                if (studentID) {
                    document.getElementById('agreeBtn').innerHTML = `<i class="fas fa-check-circle"></i> Verified - ${studentID}`;
                    document.getElementById('agreeBtn').style.background = 'linear-gradient(135deg, var(--primary), var(--primary-dark))';
                    document.getElementById('disagreeBtn').style.opacity = '0.5';
                    document.getElementById('disagreeBtn').style.pointerEvents = 'none';
                }
            }
            
            document.querySelectorAll('.content-section')[0].classList.add('visible');
        });

        // Keyboard shortcuts
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                const modal = document.getElementById('agreementModal');
                if (modal.style.display === 'flex') {
                    modal.style.display = 'none';
                }
            }
            
            if (e.key === 'b' && !['INPUT', 'TEXTAREA', 'SELECT'].includes(document.activeElement.tagName)) {
                document.getElementById('backBtn').click();
            }
        });
    </script>
</body>
</html>