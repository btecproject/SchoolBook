    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
        }

        :root {
            --primary: #fd964b; /* Màu chủ đạo mới */
            --primary-dark: #e8823a; /* Màu đậm hơn */
            --primary-light: #ffad73; /* Màu nhạt hơn */
            --secondary: #1abc9c;
            --accent: #e74c3c;
            --light: #f8f9fa;
            --dark: #2c3e50;
            --success: #27ae60;
            --warning: #f39c12;
            --shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            --radius: 12px;
            --transition: all 0.3s ease;
        }

        body {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            color: var(--dark);
            line-height: 1.6;
            min-height: 100vh;
            padding: 15px;
        }

        .container {
            max-width: 900px;
            margin: 0 auto;
        }

        /* Back Button với màu mới */
        .back-button {
            position: fixed;
            top: 15px;
            left: 15px;
            background: var(--primary);
            color: white;
            width: 45px;
            height: 45px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.2rem;
            cursor: pointer;
            box-shadow: 0 5px 15px rgba(253, 150, 75, 0.3);
            transition: var(--transition);
            z-index: 100;
            border: none;
            outline: none;
        }

        .back-button:hover {
            background: var(--primary-dark);
            transform: scale(1.1);
        }

        /* TITLE SECTION thay thế Header */
        .title-section {
            background: white;
            color: var(--dark);
            padding: 25px 20px;
            border-radius: var(--radius);
            margin-bottom: 20px;
            text-align: center;
            position: relative;
            overflow: hidden;
            box-shadow: var(--shadow);
            border: 2px solid var(--primary);
        }

        .title-section h1 {
            font-size: 2rem;
            font-weight: 800;
            margin-bottom: 10px;
            letter-spacing: -0.5px;
            color: var(--primary);
        }

        .title-section .subtitle {
            font-size: 1rem;
            opacity: 0.8;
            max-width: 700px;
            margin: 0 auto;
        }

        /* CONTENT AREA */
        .content-area {
            background: white;
            border-radius: var(--radius);
            padding: 25px;
            box-shadow: var(--shadow);
        }

        .content-section {
            margin-bottom: 25px;
            padding-bottom: 15px;
            border-bottom: 1px solid var(--light);
            opacity: 0;
            transform: translateY(20px);
            transition: opacity 0.5s ease, transform 0.5s ease;
        }

        .content-section.visible {
            opacity: 1;
            transform: translateY(0);
        }

        .section-title {
            color: var(--primary);
            font-size: 1.5rem;
            margin-bottom: 12px;
            padding-bottom: 8px;
            border-bottom: 3px solid var(--primary);
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .section-icon {
            color: var(--primary);
            font-size: 1.3rem;
        }

        .section-content {
            font-size: 0.95rem;
            line-height: 1.6;
            color: #555;
        }

        .section-content p {
            margin-bottom: 12px;
        }

        .highlight-box {
            background: linear-gradient(135deg, rgba(253, 150, 75, 0.1) 0%, rgba(253, 150, 75, 0.05) 100%);
            border-left: 4px solid var(--primary);
            padding: 15px;
            border-radius: 0 var(--radius) var(--radius) 0;
            margin: 15px 0;
            font-size: 0.9rem;
        }

        /* BTEC Rules với màu mới */
        .btec-rules {
            background: linear-gradient(135deg, rgba(253, 150, 75, 0.1) 0%, rgba(253, 150, 75, 0.05) 100%);
            border: 2px solid var(--primary);
            border-radius: var(--radius);
            padding: 18px;
            margin: 18px 0;
        }

        .btec-rules h4 {
            color: var(--primary);
            margin-bottom: 12px;
            display: flex;
            align-items: center;
            gap: 8px;
            font-size: 1.1rem;
        }

        /* Agreement Section với màu mới */
        .agreement-section {
            background: linear-gradient(135deg, rgba(253, 150, 75, 0.1) 0%, rgba(253, 150, 75, 0.05) 100%);
            border-radius: var(--radius);
            padding: 25px;
            text-align: center;
            margin-top: 30px;
            border: 2px solid var(--primary);
        }

        .agreement-title {
            font-size: 1.4rem;
            color: var(--primary);
            margin-bottom: 12px;
        }

        .agreement-options {
            display: flex;
            justify-content: center;
            gap: 12px;
            margin-top: 20px;
            flex-wrap: wrap;
        }

        .agreement-btn {
            padding: 10px 25px;
            border: none;
            border-radius: 50px;
            font-size: 0.95rem;
            font-weight: 600;
            cursor: pointer;
            transition: var(--transition);
            display: flex;
            align-items: center;
            gap: 6px;
        }

        .agree-btn {
            background: linear-gradient(135deg, var(--primary), var(--primary-dark));
            color: white;
        }

        .disagree-btn {
            background: linear-gradient(135deg, #c0392b);
            color: white;
        }

        .agreement-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        }

        /* Quick Navigation với màu mới */
        .quick-nav {
            display: flex;
            justify-content: center;
            gap: 8px;
            margin-bottom: 15px;
            flex-wrap: wrap;
        }

        .nav-btn {
            padding: 6px 12px;
            background: white;
            border: 1px solid var(--primary);
            color: var(--primary);
            border-radius: 50px;
            font-size: 0.85rem;
            cursor: pointer;
            transition: var(--transition);
            display: flex;
            align-items: center;
            gap: 4px;
        }

        .nav-btn:hover {
            background: var(--primary);
            color: white;
            transform: translateY(-2px);
        }

        /* Print Button với màu mới */
        .print-btn {
            position: fixed;
            bottom: 15px;
            right: 15px;
            background: var(--primary);
            color: white;
            width: 45px;
            height: 45px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.2rem;
            cursor: pointer;
            box-shadow: 0 5px 15px rgba(253, 150, 75, 0.3);
            transition: var(--transition);
            z-index: 100;
        }

        .print-btn:hover {
            background: var(--primary-dark);
            transform: scale(1.1);
        }

        /* Progress Bar với màu mới */
        .progress-container {
            position: sticky;
            top: 0;
            width: 100%;
            height: 4px;
            background: var(--light);
            z-index: 99;
            margin-bottom: 15px;
        }

        .progress-bar {
            height: 4px;
            background: linear-gradient(90deg, var(--primary));
            width: 0%;
            transition: width 0.3s ease;
        }

        /* RESPONSIVE DESIGN */
        @@media (max-width: 768px) {
            .title-section {
                padding: 20px 15px;
            }
            
            .title-section h1 {
                font-size: 1.7rem;
            }
            
            .content-area {
                padding: 18px;
            }
            
            .section-title {
                font-size: 1.3rem;
            }
            
            .agreement-options {
                flex-direction: column;
                align-items: center;
            }
            
            .agreement-btn {
                width: 100%;
                max-width: 280px;
                justify-content: center;
            }
            
            .back-button {
                top: 8px;
                left: 8px;
                width: 38px;
                height: 38px;
                font-size: 1rem;
            }
            
            body {
                padding: 10px;
            }
        }

        @@media (max-width: 480px) {
            body {
                padding: 8px;
            }
            
            .title-section {
                padding: 15px 10px;
                margin-bottom: 15px;
            }
            
            .title-section h1 {
                font-size: 1.4rem;
            }
            
            .content-area {
                padding: 12px;
            }
            
            .section-title {
                font-size: 1.1rem;
                gap: 6px;
            }
            
            .agreement-section {
                padding: 15px;
                margin-top: 20px;
            }
            
            .title-section .subtitle {
                font-size: 0.9rem;
            }
        }

        /* List styling */
        .section-content ul {
            padding-left: 20px;
            margin-bottom: 12px;
        }

        .section-content li {
            margin-bottom: 8px;
            position: relative;
        }

        .section-content li:before {
            content: "•";
            color: var(--primary);
            font-weight: bold;
            display: inline-block;
            width: 1em;
            margin-left: -1em;
        }

        /* Contact Info với màu mới */
        .contact-info {
            display: flex;
            justify-content: center;
            gap: 15px;
            margin-top: 15px;
            flex-wrap: wrap;
        }

        .contact-item {
            display: flex;
            align-items: center;
            gap: 6px;
            color: var(--dark);
            font-size: 0.85rem;
        }

        .contact-item i {
            color: var(--primary);
        }

        /* Modal với màu mới */
        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.8);
            z-index: 1000;
            align-items: center;
            justify-content: center;
        }

        .modal-content {
            background: white;
            padding: 25px;
            border-radius: var(--radius);
            max-width: 450px;
            text-align: center;
            animation: modalIn 0.3s ease;
            border: 2px solid var(--primary);
        }

        @@keyframes modalIn {
            from { opacity: 0; transform: scale(0.9); }
            to { opacity: 1; transform: scale(1); }
        }

        .modal-title {
            font-size: 1.5rem;
            color: var(--primary);
            margin-bottom: 12px;
        }

        .modal-text {
            font-size: 1rem;
            margin-bottom: 20px;
            color: var(--dark);
        }

        .modal-btn {
            padding: 8px 20px;
            background: var(--primary);
            color: white;
            border: none;
            border-radius: 50px;
            font-size: 0.95rem;
            cursor: pointer;
            transition: var(--transition);
        }

        .modal-btn:hover {
            background: var(--primary-dark);
            transform: scale(1.05);
        }

        /* Last Updated info */
        .last-updated {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 8px;
            margin-top: 10px;
            font-size: 0.8rem;
            color: #7f8c8d;
        }

        .last-updated i {
            color: var(--primary);
        }
    </style>
</head>
